{
  "claude_desktop_full": {
    "mcpServers": {
      "volutemcp-local": {
        "command": "volutemcp-local",
        "args": ["--transport", "stdio"],
        "env": {
          "VOLUTEMCP_LOG_LEVEL": "INFO"
        }
      },
      "volutemcp-cloud": {
        "command": "npx",
        "args": ["@modelcontextprotocol/server-fetch", "https://volutemcp-server.onrender.com"],
        "env": {}
      }
    }
  },
  
  "claude_desktop_local_only": {
    "mcpServers": {
      "volutemcp-local": {
        "command": "volutemcp-local",
        "args": ["--transport", "stdio"],
        "env": {
          "VOLUTEMCP_LOG_LEVEL": "INFO",
          "LOCAL_SERVER_NAME": "PowerPoint-AI"
        }
      }
    }
  },
  
  "development_testing": {
    "mcpServers": {
      "volutemcp-local": {
        "command": "python",
        "args": ["-m", "volute_ppt.server_local", "stdio"],
        "env": {
          "VOLUTEMCP_LOG_LEVEL": "DEBUG"
        },
        "working_directory": "C:/path/to/volutemcp"
      }
    }
  },
  
  "custom_ports": {
    "mcpServers": {
      "volutemcp-local-http": {
        "command": "volutemcp-local",
        "args": ["--transport", "http", "--port", "9000", "--host", "127.0.0.1"],
        "env": {}
      }
    }
  },
  
  "enterprise_setup": {
    "mcpServers": {
      "volutemcp-local": {
        "command": "volutemcp-local",
        "args": ["--transport", "stdio"],
        "env": {
          "VOLUTEMCP_LOG_LEVEL": "WARNING",
          "LOCAL_SERVER_NAME": "Enterprise-PowerPoint-Integration",
          "LOCAL_SERVER_HOST": "0.0.0.0",
          "LOCAL_SERVER_PORT": "8001"
        }
      },
      "volutemcp-cloud": {
        "command": "npx", 
        "args": ["@modelcontextprotocol/server-fetch", "https://volutemcp-server.onrender.com"],
        "env": {}
      }
    }
  }
}

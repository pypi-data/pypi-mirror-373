// Variables and Scopes Example
pack "variables" "Example showing variable scopes" 82;

namespace "variables";

// Variables with different scopes
var num globalCounter scope<global> = 0;
var num playerCounter scope<@s> = 0;
var num teamCounter scope<@a[team=red]> = 0;

function "main" {
    globalCounter = globalCounter + 1;
    playerCounter = playerCounter + 1;
    teamCounter = teamCounter + 1;
    
    say Global counter: $globalCounter$;
    say Player counter: $playerCounter$;
    say Team counter: $teamCounter$;
}

function "reset" {
    globalCounter = 0;
    playerCounter = 0;
    teamCounter = 0;
    say All counters reset!;
}

on_load "variables:main";

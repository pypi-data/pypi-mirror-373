// pre_82_example.mdl - Pre-82 Pack Format Example (Minecraft 1.20 and below)
// Uses pack format < 82 with legacy directory structure (functions/ instead of function/)
pack "pre_82_example" "A pre-82 MDL datapack example" 15;

namespace "example";

// Number variables for scoreboard storage
var num counter = 0;
var num health = 20;

function "main" {
    // Basic variable assignment
    counter = 0;
    health = 15;
    
    // If statement with variable substitution
    if "$health$ < 10" {
        say "Health is low!";
    } else {
        say "Health is okay";
    }
    
    // While loop with counter
    while "$counter$ < 5" {
        counter = $counter$ + 1;
        say "Counter: $counter$";
    }
    
    // While loop to iterate over players (for loops are no longer supported)
    var num player_count = 0;
    while "$player_count$ < 3" {
        say "Hello player!";
        player_count = $player_count$ + 1;
    }
}

function "helper" {
    var num result = 0;
    result = 5 + 3;
    say "Result: $result$";
}

// Hook to run main function every tick
on_tick "example:main";

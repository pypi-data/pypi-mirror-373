// test_simple_scope.mdl - Simple scope test
pack "test_simple" "Simple scope test" 82;

namespace "test_simple";

// Global variable
var num counter = 0;

// Player-scoped variable
var num player_score scope "@s" = 0;

function "main" {
    counter = counter + 1;
    player_score = player_score + 10;
    say "Counter: $counter$";
    say "Player score: $player_score$";
}

on_load "test_simple:main";

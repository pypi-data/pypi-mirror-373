// test1.mdl - Hello World Example
pack "test1" "A simple hello world datapack" 82;

namespace "test1";

// Simple counter variable
var num counter = 0;

function "hello" {
    say Hello, Minecraft!;
    tellraw @a {"text":"Welcome to my datapack!","color":"green"};
    counter = counter + 1;
    say Counter: $counter$;
}

// Hook to run hello function when datapack loads
on_load "test1:hello";

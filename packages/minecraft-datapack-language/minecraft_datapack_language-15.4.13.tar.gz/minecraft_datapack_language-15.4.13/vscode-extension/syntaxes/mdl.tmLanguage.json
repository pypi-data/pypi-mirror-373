
{
  "scopeName": "source.mdl",
  "patterns": [
    {
      "name": "keyword.control.mdl",
      "match": "\\b(pack|namespace|function|on_tick|on_load|tag|add|if|else if|else|while|for|in|var|let|const|num|str|list|try|catch|throw|switch|case|default|break|continue|return|import|from|as|recipe|loot_table|advancement|predicate|item_modifier|structure|scope|global)\\b"
    },
    {
      "name": "entity.name.section.mdl",
      "match": "^(\\s*)(pack|namespace|function|tag|recipe|loot_table|advancement|predicate|item_modifier|structure)\\b"
    },
    {
      "name": "string.quoted.double.mdl",
      "match": "\"([^\"\\\\]|\\\\.)*\""
    },
    {
      "name": "comment.line.mdl",
      "match": "//.*$"
    },
    {
      "name": "comment.block.mdl",
      "begin": "/\\*",
      "end": "\\*/"
    },
    {
      "name": "constant.numeric.mdl",
      "match": "\\b\\d+\\b"
    },
    {
      "name": "keyword.operator.mdl",
      "match": "\\b(\\+|-|\\*|/|%|=|==|!=|<|>|<=|>=|&&|\\|\\||!)\\b"
    },
    {
      "name": "keyword.operator.assignment.mdl",
      "match": "\\b(\\+=|-=|\\*=|/=|%=)\\b"
    },
    {
      "name": "punctuation.terminator.mdl",
      "match": ";"
    },
    {
      "name": "punctuation.section.block.mdl",
      "match": "[{}]"
    },
    {
      "name": "punctuation.section.parens.mdl",
      "match": "[()]"
    },
    {
      "name": "punctuation.section.brackets.mdl",
      "match": "[\\[\\]]"
    },
    {
      "name": "variable.other.mdl",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
    },
    {
      "name": "variable.scope.mdl",
      "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*<[^>]+>\\b"
    },
    {
      "name": "keyword.scope.mdl",
      "match": "\\bscope<[^>]+>\\b"
    },
    {
      "name": "constant.language.mdl",
      "match": "\\b(true|false|null|undefined)\\b"
    },
    {
      "name": "support.function.mdl",
      "match": "\\b(say|tellraw|effect|particle|execute|scoreboard|data|function|tag|tp|kill|summon|give|clear|enchant|gamemode|weather|time|difficulty|gamerule|title|playsound|stopsound|kick|ban|ban-ip|pardon|pardon-ip|whitelist|op|deop|save-all|save-off|save-on|list|me|msg|team|trigger|advancement|recipe|loot|schedule|return|run)\\b"
    },
    {
      "name": "entity.name.selector.scoped.mdl",
      "begin": "(@p|@r|@a|@e|@s|@initiator|@c|@v|@d|@w)",
      "end": "(?=>)",
      "beginCaptures": {
        "1": {
          "name": "entity.name.selector.mdl"
        }
      },
      "patterns": [
        {
          "name": "entity.name.selector.arguments.mdl",
          "match": "\\[([^\\]]*)\\]"
        }
      ]
    },
    {
      "name": "entity.name.selector.function.mdl",
      "begin": "function\\s+\"[^\"]*<(@p|@r|@a|@e|@s|@initiator|@c|@v|@d|@w)",
      "end": "(?=>)",
      "beginCaptures": {
        "1": {
          "name": "entity.name.selector.mdl"
        }
      },
      "patterns": [
        {
          "name": "entity.name.selector.arguments.mdl",
          "match": "\\[([^\\]]*)\\]"
        }
      ]
    },
    {
      "name": "entity.name.selector.mdl",
      "match": "(@p|@r|@a|@e|@s|@initiator|@c|@v|@d|@w)"
    },
    {
      "name": "string.raw.mdl",
      "begin": "\\$!raw",
      "end": "raw!\\$",
      "beginCaptures": {
        "0": {
          "name": "keyword.raw.mdl"
        }
      },
      "endCaptures": {
        "0": {
          "name": "keyword.raw.end.mdl"
        }
      },
      "patterns": [
        {
          "name": "string.raw.content.mdl",
          "match": "."
        }
      ]
    }
  ]
}

// test_multi_namespace_final.mdl - Final test for multi-namespace registry support
pack "Multi-Namespace Test" "Testing multi-namespace registry support" 82;

namespace "weapons";

// Weapons namespace registry types
recipe "diamond_sword" "recipes/diamond_sword.json";
loot_table "epic_loot" "loot_tables/epic_loot.json";

function "craft_weapon" {
    say Crafting weapons!;
    tellraw @a {"text":"Welcome to the weapons namespace!","color":"blue"};
}

namespace "magic";

// Magic namespace registry types  
advancement "first_spell" "advancements/first_spell.json";
predicate "has_mana" "predicates/has_mana.json";

function "cast_spell" {
    say Casting spells!;
    tellraw @a {"text":"Welcome to the magic namespace!","color":"purple"};
}

namespace "tools";

// Tools namespace registry types
item_modifier "enchant_tool" "item_modifiers/enchant_tool.json";
structure "workshop" "structures/workshop.json";

function "craft_tool" {
    say Crafting tools!;
    tellraw @a {"text":"Welcome to the tools namespace!","color":"green"};
}

on_load "weapons:craft_weapon";

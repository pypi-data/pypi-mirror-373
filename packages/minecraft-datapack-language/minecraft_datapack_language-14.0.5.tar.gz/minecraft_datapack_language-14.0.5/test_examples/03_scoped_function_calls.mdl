// Scoped Function Calls Example
pack "scoped_calls" "Example showing scoped function calls" 82;

namespace "scoped_calls";

var num playerScore scope<@s> = 0;
var num globalTimer scope<global> = 0;

function "main" {
    say Starting scoped function demo...;
    function "scoped_calls:increment_player<@s>";
    function "scoped_calls:increment_global<global>";
    function "scoped_calls:show_scores<@a>";
}

function "increment_player" {
    playerScore = playerScore + 10;
    say Your score increased!;
}

function "increment_global" {
    globalTimer = globalTimer + 1;
    say Global timer updated!;
}

function "show_scores" {
    say Player score: $playerScore$;
    say Global timer: $globalTimer$;
}

on_load "scoped_calls:main";

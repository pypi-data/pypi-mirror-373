// test_variable_fix.mdl
pack "Variable Test Pack" "Testing variable assignments" 82;

namespace "example";

var num counter = 0;

function "hello" {
    say Hello, Minecraft!;
    tellraw @a {"text":"Welcome to my datapack!","color":"green"};
    counter = $counter$ + 1;
    say Counter: $counter$;
}

on_load "example:hello";

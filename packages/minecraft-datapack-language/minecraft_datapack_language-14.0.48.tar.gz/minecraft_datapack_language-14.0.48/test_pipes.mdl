// pipes.mdl - Hello World Example
pack "pipes" "A simple hello world datapack" 82;

namespace "pipes";

// Recipe declarations
recipe "pipe" "recipes/pipe.json";
recipe "inlet" "recipes/inlet.json";
recipe "outlet" "recipes/outlet.json";
recipe "wrench" "recipes/wrench.json";

// Simple counter variable
var num counter = 0;

function "hello" {
    say Hello, Minecraft!;
    tellraw @a {"text":"Welcome to my datapack!","color":"green"};
    counter = counter + 1;
    say Counter: $counter$;
}

// Hook to run hello function when datapack loads
on_load "pipes:hello";

// variables.mdl - Simple number variables test
pack "variables" "Simple variables test" 82;

namespace "test";

// Simple number variables only
var num counter = 0;
var num health = 20;
var num level = 1;
var num experience = 0;

function "main" {
    // Basic variable assignment
    counter = 42;
    health = 15;
    level = 5;
    experience = 100;
    
    // Variable substitution in strings
    say "Counter: $counter$";
    say "Health: $health$";
    say "Level: $level$";
    say "Experience: $experience$";
    
    // Variable substitution in tellraw
    tellraw @s [{"text":"Counter: "},{"score":{"name":"@s","objective":"counter"}}];
    tellraw @s [{"text":"Health: "},{"score":{"name":"@s","objective":"health"}}];
    
    // Simple arithmetic
    counter = $counter$ + 1;
    health = $health$ - 5;
    level = $level$ * 2;
    experience = $experience$ / 2;
    
    // Show updated values
    say "Updated Counter: $counter$";
    say "Updated Health: $health$";
    say "Updated Level: $level$";
    say "Updated Experience: $experience$";
}

on_tick "test:main";

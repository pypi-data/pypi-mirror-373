// conditionals.mdl - Simple conditional logic test
pack "conditionals" "Conditional logic test" 82;

namespace "test";

// Simple number variables
var num player_level = 15;
var num player_health = 20;
var num experience = 75;
var num min_level = 10;
var num max_level = 20;
var num required_exp = 50;

function "main" {
    // Set initial values
    player_level = 15;
    player_health = 8;
    experience = 75;
    
    // Simple if statement
    if "$player_level$ > 10" {
        say "Player is experienced!";
    }
    
    // If-else statement
    if "$player_health$ < 10" {
        say "Health is low!";
        effect give @s minecraft:regeneration 10 1;
    } else {
        say "Health is okay";
    }
    
    // Nested if statements
    if "$player_level$ >= 15" {
        if "$experience$ >= 50" {
            say "Advanced player detected!";
            effect give @s minecraft:strength 10 1;
        } else {
            say "Experienced but needs more XP";
        }
    } else {
        say "Novice player";
    }
    
    // Multiple conditions
    if "$player_level$ >= 20" {
        say "Master level!";
    } else if "$player_level$ >= 15" {
        say "Expert level!";
    } else if "$player_level$ >= 10" {
        say "Intermediate level!";
    } else {
        say "Beginner level!";
    }
    
    // Variable comparison
    if "$player_level$ > $min_level$" {
        say "Above minimum level";
    }
    
    if "$experience$ >= $required_exp$" {
        say "Has required experience";
    }
}

on_tick "test:main";

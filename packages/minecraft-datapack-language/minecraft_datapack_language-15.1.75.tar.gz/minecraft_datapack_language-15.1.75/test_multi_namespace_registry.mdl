// test_multi_namespace_registry.mdl - Test multiple namespaces with registry types
pack "Multi Registry Test" "Testing multiple namespaces with registry types" 82;

namespace "main";

// Main namespace registry types
recipe "main_recipe" "recipes/main_recipe.json";
loot_table "main_loot" "loot_tables/main_loot.json";

function "hello" {
    say Hello from main namespace!;
}

on_load "main:hello";

namespace "other";

// Other namespace registry types
advancement "other_advancement" "advancements/other_advancement.json";
predicate "other_predicate" "predicates/other_predicate.json";

function "helper" {
    say Hello from other namespace!;
}

pack "test_scoped" "Test scoped variables in conditions" 82;
namespace "test";

var num playerScore = 0;
var num globalCounter scope<global> = 0;
var num teamScore scope<@a[team=red]> = 0;

function "main" {
    // Test explicit scope in if condition
    if "$playerScore<@s>$ > 10" {
        say "Player score is high!";
    }
    
    // Test global scope in if condition
    if "$globalCounter<global>$ > 100" {
        say "Global counter is high!";
    }
    
    // Test team scope in if condition
    if "$teamScore<@a[team=red]>$ > 50" {
        say "Red team score is high!";
    }
    
    // Test default scope (should use @s)
    if "$playerScore$ > 5" {
        say "Player score is above 5!";
    }
}

on_load "test:main";

<odoo>
    <record id="edi_ediversa_view_company_form" model="ir.ui.view">
        <field name="name">edi.ediversa.view.company.form</field>
        <field name="model">res.company</field>
        <field name="inherit_id" ref="base.view_company_form" />
        <field name="arch" type="xml">
            <notebook position="inside">
                <page name="edi_ediversa" string="Ediversa">
                    <group>
                        <group>
                            <field name="use_edi_ediversa" />
                            <field
                                name="edi_ediversa_test"
                                invisible="not use_edi_ediversa"
                            />
                        </group>
                        <group invisible="not use_edi_ediversa">
                            <field
                                name="edi_ediversa_user"
                                required="use_edi_ediversa"
                            />
                            <field
                                name="edi_ediversa_password"
                                required="use_edi_ediversa"
                                password="True"
                            />
                        </group>
                    </group>
                </page>
            </notebook>
        </field>
    </record>
</odoo>

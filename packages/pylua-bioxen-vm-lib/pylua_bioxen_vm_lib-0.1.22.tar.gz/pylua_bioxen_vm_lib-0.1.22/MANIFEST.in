# Include important documentation files
include README.md
include LICENSE
include CHANGELOG.md
include requirements.txt
include PHASE1_COMPLETE.md

# Include specification files
include pylua_bioxen_vm_lib_specificationversion-*.markdown
include *.md

# Include configuration files
include pyproject.toml
include setup.cfg
include setup.py

# Include all source files
recursive-include pylua_bioxen_vm_lib *.py
recursive-include tests *.py

# Exclude development and build artifacts
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * .git*
exclude .gitignore
exclude tox.ini
exclude .github
recursive-exclude .github *
exclude docs/_build
recursive-exclude docs/_build *
exclude build
recursive-exclude build *
exclude dist
recursive-exclude dist *
exclude *.egg-info
recursive-exclude *.egg-info *

# Exclude large documentation folders that aren't needed for the package
exclude xapi-base-standard-documentation
recursive-exclude xapi-base-standard-documentation *
exclude md_archive
recursive-exclude md_archive *
exclude full-support-drafts
recursive-exclude full-support-drafts *

# Include examples
recursive-include examples *.py

{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Device Manager",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/pictorus/pictorus_device_manager.py",
            "cwd": "${workspaceFolder}",
            "env": { "PYTHONPATH": "${workspaceFolder}/src"},
            "justMyCode": false,
        },
        {
            "name": "Python Debugger: CLI",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/src/pictorus/pictorus_cli.py",
            "cwd": "${workspaceFolder}",
            "env": { "PYTHONPATH": "${workspaceFolder}/src"},
            "justMyCode": false,
            "args": [
                "--version",
            ]
        },
        {
            "name": "Python: Pytest Current File",
            "type": "debugpy",
            "request": "launch",
            "module": "pytest",
            "args": [
              "${file}",
              "-vv"
            ],
            "justMyCode": false
        }
    ]
}
<odoo>
    <record
        id="product_template_form_inherit_service_tracking_copy_tasks"
        model="ir.ui.view"
    >
        <field
            name="name"
        >product.tempale.for.view.inherit.service.tracking.copy.tasks</field>
        <field name="model">product.template</field>
        <field
            name="inherit_id"
            ref="sale_project.product_template_form_view_invoice_policy_inherit_sale_project"
        />
        <field name="arch" type="xml">
            <xpath
                expr="//div[hasclass('o_td_label', 'd-inline-flex')][label[@for='project_template_id']]"
                position="attributes"
            >
                <attribute
                    name="invisible"
                >service_tracking not in ['task_in_project', 'project_only', 'copy_tasks_in_project']</attribute>
            </xpath>
            <xpath expr="//field[@name='project_template_id']" position="attributes">
                <attribute
                    name="invisible"
                >service_tracking not in ['task_in_project', 'project_only', 'copy_tasks_in_project']</attribute>
                <attribute
                    name="required"
                >service_tracking == 'copy_tasks_in_project'</attribute>
            </xpath>
        </field>
    </record>
</odoo>

# MANIFEST.in - Controls what gets included in the package

# Include important documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include package data
recursive-include mailblock *.py

# EXCLUDE test files from the distributed package
prune tests/
exclude test_*.py
exclude *_test.py
exclude conftest.py
exclude my_first_email.py
exclude quickstart.py

# EXCLUDE development files
exclude .github/
exclude .gitignore
exclude pytest.ini
exclude mypy.ini
exclude .flake8
exclude tox.ini

# EXCLUDE example files (or include them - your choice)
prune examples/
# OR to include examples:
# recursive-include examples *.py
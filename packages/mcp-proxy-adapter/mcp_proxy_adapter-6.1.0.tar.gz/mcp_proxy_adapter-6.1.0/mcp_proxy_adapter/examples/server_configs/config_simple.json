{
  "server": {
    "host": "0.0.0.0",
    "port": 8002,
    "debug": false,
    "workers": 1
  },
  
  "security": {
    "framework": "none",
    "enabled": false,
    "debug": false,
    "environment": "dev",
    "version": "1.0.0"
  },
  
  "logging": {
    "level": "INFO",
    "console_output": true,
    "file_output": false,
    "file_path": "./logs/server.log",
    "max_file_size": 10,
    "backup_count": 5,
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  },
  
  "commands": {
    "auto_discovery": true,
    "commands_directory": "./commands",
    "builtin_commands": ["echo", "health", "config", "roletest", "proxy_registration"],
    "custom_commands": [],
    "command_timeout": 30
  },
  
  "protocol": {
    "jsonrpc": {
      "enabled": true,
      "version": "2.0",
      "endpoint": "/api/jsonrpc"
    },
    "rest": {
      "enabled": true,
      "endpoint": "/cmd"
    }
  }
}

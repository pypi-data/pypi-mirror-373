{
    "server": {
        "host": "0.0.0.0",
        "port": 9444,
        "debug": false,
        "log_level": "INFO"
    },
    "ssl": {
        "enabled": true,
        "cert_file": "./certs/server.crt",
        "key_file": "./certs/server.key",
        "ca_cert": "./certs/ca.crt",
        "verify_client": true,
        "client_cert_required": true
    },
    "security": {
        "enabled": true,
        "auth": {
            "enabled": true,
            "methods": ["certificate"],
            "certificate_auth": true
        },
        "permissions": {
            "enabled": true,
            "roles_file": "./roles.json",
            "default_role": "user",
            "deny_by_default": true
        },
        "rate_limit": {
            "enabled": true,
            "requests_per_minute": 60,
            "requests_per_hour": 1000,
            "burst_limit": 10
        }
    },
    "logging": {
        "level": "INFO",
        "console_output": true,
        "file_output": false
    },
    "commands": {
        "auto_discovery": true,
        "commands_directory": "./commands"
    }
}

{
  "server_url": "https://localhost:8443",
  "timeout": 30,
  "retry_attempts": 3,
  "retry_delay": 1,
  "security": {
    "auth_method": "certificate",
    "certificate": {
      "enabled": true,
      "cert_file": "./certs/client.crt",
      "key_file": "./keys/client.key",
      "ca_cert_file": "./certs/ca.crt"
    },
    "ssl": {
      "enabled": true,
      "check_hostname": true,
      "ca_cert_file": "./certs/ca.crt",
      "verify_mode": "CERT_REQUIRED",
      "min_tls_version": "TLSv1.2"
    }
  }
}

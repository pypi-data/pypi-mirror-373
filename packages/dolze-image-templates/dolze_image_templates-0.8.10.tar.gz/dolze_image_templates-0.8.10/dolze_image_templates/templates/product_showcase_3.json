{
  "name": "product_showcase_3",
  "description": "Enhanced product advertisement template for the products",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/33e90225-ffdc-4b8c-936b-7ca1343634b9.png",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": {
        "x": 200,
        "y": 20
      },
      "size": {
        "width": 950,
        "height": 850
      }
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": {
        "x": 50,
        "y": 780
      },
      "font_size": 80,
      "color": [255, 255, 255, 1.0],
      "font_path": "Raleway-Bold",
      "alignment": "left",
      "max_width": 1000,
      "line_spacing": 1.2
    },
    {
      "type": "text",
      "text": "${product_description}",
      "position": {
        "x": 60,
        "y": 930
      },
      "font_size": 40,
      "color": [255, 255, 255, 0.9],
      "font_path": "Raleway-Light",
      "alignment": "left",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 600,
        "y": 970
      },
      "font_size": 45,
      "color": [1, 1, 1, 1.0],
      "font_path": "Raleway-Bold",
      "line_spacing": 1.3,
      "max_width": 400,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 550,
        "y": 1040
      },
      "font_size": 30,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-Regular",
      "line_spacing": 1.3,
      "max_width": 600
    }
  ],
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "product_price": {
      "field": "product_price",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "product_description": {
      "field": "product_description",
      "type": "text",
      "minLength": 30,
      "maxLength": 49
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 14
    },
    "website_url": {
      "field": "website_url",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "samples": {
      "product_image": "https://example.com/product3.png",
      "product_name": "Smart Widget",
      "product_price": "$99.99",
      "product_description": "Innovative widget for seamless productivity",
      "cta_text": "Book Now",
      "website_url": "dolze.ai"
    },
    "fieldPrompt": {
      "product_image": "generate a prompt for a high-quality product image with a clean, modern aesthetic. The image should be in portrait orientation with the product centered and well-lit, showing key features and design elements. For best results, use an image with a transparent or solid background.",
      "product_name": "Enter the product name (2-3 words). Be clear and descriptive. Example: 'Noise-Canceling Headphones', 'Stainless Steel Water Bottle'.",
      "product_description": "Write a compelling product description (6-7 words). Highlight key features or benefits that make the product stand out (e.g., 'Premium sound with 30-hour battery life').",
      "cta_text": "Enter a clear call-to-action (2-3 words). Examples: 'Shop Now', 'Buy Today', 'Learn More', 'Get Yours'.",
      "website_url": "Enter your business website URL (e.g., 'yourbusiness.com'). Omit 'http://' or 'www' for a cleaner look.",
      "product_price": "Enter the product price with currency symbol (e.g., 'â‚¹2,499', '$99.99'). Include any discount if applicable."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/product_showcase_3.png"
  }
}

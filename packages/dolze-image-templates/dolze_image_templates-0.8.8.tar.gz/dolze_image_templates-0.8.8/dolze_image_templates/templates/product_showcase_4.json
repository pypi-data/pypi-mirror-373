{
  "name": "product_showcase_4",
  "description": "Enhanced product advertisement template for the products",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/5ff29f70-cfd8-498d-86fe-c4b3eb2d3f7d.png",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": {
        "x": 200,
        "y": 20
      },
      "size": {
        "width": 950,
        "height": 850
      }
    },
    {
      "type": "text",
      "text": "${offer_text}",
      "position": {
        "x": 30,
        "y": 680
      },
      "font_size": 80,
      "color": [255, 255, 255, 1],
      "font_path": "Montserrat-Bold",
      "alignment": "left",
      "max_width": 430
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 0,
        "y": 1040
      },
      "font_size": 30,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-Medium",
      "line_spacing": 1.3,
      "max_width": 1080,
      "alignment": "center"
    }
  ],
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "offer_text": {
      "field": "offer_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 200
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "samples": {
      "product_image": "https://example.com/product4.png",
      "offer_text": "50% OFF",
      "website_url": "example.com/shop",
      "theme_color": "#4A90E2"
    },
    "fieldPrompt": {
      "product_image": "Generate a prompt for a professional product image which has transparent background as a png image. Make sure just the product is visible and the background is transparent. Also dont keep any text in the image. Make sure it has transparent background makes sure it has transparent background (alpha PNG) and also has isolated object cut-out Isolated object cut-out on a completely transparent background (alpha PNG). No floor, no shadows, no reflections, no props, no textâ€”only the product, perfectly lit",
      "offer_text": "Special Offer\n50% OFF or something similar strictly in under 2-3 words",
      "website_url": "example.com/shop",
      "theme_color": "theme color for the template in hex format eg. #121212"
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/product_showcase_4.png"
  }
}

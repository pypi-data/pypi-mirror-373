{
  "name": "food_menu_promo",
  "description": "Minimal poster with white background, large headline text, shoe image with red lace forming an awareness ribbon, and event info.",

  "size": {
    "width": 1024,
    "height": 1536
  },
  "use_base_image": false,
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 15
    },
    "product_description": {
      "field": "product_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "price": {
      "field": "price",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "samples": {
      "product_image": "https://example.com/running_shoes.jpg",
      "product_name": "UltraBoost Running Shoes",
      "product_description": "Lightweight and responsive running shoes with superior cushioning for maximum comfort",
      "price": "$129.99",
      "cta_text": "Shop Now",
      "theme_color": "#00BCD4"
    },
    "fieldPrompt": {
      "product_image": "Design a clean, modern food poster layout with space for a bold headline, a short description, and a call-to-action area",
      "product_name": "Name of the shoe product in under 15 chars",
      "product_description": "Description of the shoe features and benefits",
      "price": "Price with currency symbol",
      "cta_text": "Call to action text in under 1-2 words",
      "theme_color": "a hex color code for the theme color(eg: #00BCD4)"
    }
  },
  "components": [
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1024, "height": 1536 },
      "gradient": {
        "type": "linear",
        "colors": ["#FBFBFB", "#DEDEDE"],
        "direction": 90
      }
    },
    {
      "type": "text",
      "text": "${headline_text}",
      "position": { "x": 80, "y": 100 },
      "font_size": 100,
      "font_path": "Poppins-Black",
      "color": "#000000",
      "alignment": "center",
      "max_width": 864,
      "line_height": 1.2
    },
    {
      "type": "text",
      "text": "${subtext}",
      "position": { "x": 80, "y": 370 },
      "font_size": 36,
      "font_path": "Poppins-Regular",
      "color": "#000000",
      "alignment": "center",
      "max_width": 864,
      "line_height": 1.4
    },
    {
      "type": "text",
      "text": "${footer_text}",
      "position": { "x": 80, "y": 500 },
      "font_size": 40,
      "font_path": "Poppins-Bold",
      "color": "#000000",
      "alignment": "center",
      "max_width": 864
    },
    {
      "type": "image",
      "image_url": "${shoe_image_url}",
      "position": { "x": 0, "y": 575 },
      "size": { "width": 1024, "height": 1024 },
      "image_fit": "contain"
    }
  ]
}

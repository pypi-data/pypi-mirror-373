{
  "name": "qa_template_2",
  "description": "Revamped modern Q&A template with glassmorphism, gradients, and geometric accents",
  "size": {
    "width": 2560,
    "height": 2560
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2560,
        "height": 2560
      },
      "fill_color": null,
      "gradient": {
        "type": "linear",
        "colors": [
          "${theme_color}",
          "#e0e7ff",
          "#f0fdfa"
        ],
        "direction": 120
      }
    },
    {
      "type": "polygon",
      "points": [
        [
          2100,
          1900
        ],
        [
          2560,
          2560
        ],
        [
          1900,
          2560
        ]
      ],
      "position": {
        "x": 0,
        "y": 0
      },
      "fill_color": [
        24,
        215,
        208,
        0.16
      ],
      "opacity": 0.65
    },
    {
      "type": "rectangle",
      "position": {
        "x": 220,
        "y": 320
      },
      "size": {
        "width": 2120,
        "height": 1860
      },
      "fill_color": [
        255,
        255,
        255,
        0.82
      ],
      "border_radius": 80,
      "blur_radius": 32
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 240,
        "y": 340
      },
      "size": {
        "width": 140,
        "height": 140
      },
      "circle_crop": true
    },
    {
      "type": "cta_button",
      "text": "${question}",
      "position": {
        "x": 470,
        "y": 510
      },
      "font_path": "Outfit-Bold",
      "font_size": 120,
      "color": "#ffffff",
      "line_spacing": 1.2,
      "alignment": "left",
      "size": {
        "width": 1680,
        "height": 200
      },
      "bg_color": [
        100,
        200,
        255,
        0.18
      ],
      "corner_radius": 20
    },
    {
      "type": "rectangle",
      "position": {
        "x": 440,
        "y": 800
      },
      "size": {
        "width": 1680,
        "height": 4
      },
      "fill_color": [
        100,
        200,
        255,
        0.18
      ],
      "border_radius": 2
    },
    {
      "type": "text",
      "text": "${answer}",
      "position": {
        "x": 520,
        "y": 870
      },
      "font_path": "Outfit-Regular",
      "font_size": 80,
      "color": [
        39,
        50,
        86,
        0.98
      ],
      "max_width": 1520,
      "line_height": 1.5,
      "line_spacing": 1.5,
      "align": "center"
    },
    {
      "type": "rectangle",
      "position": {
        "x": 440,
        "y": 1650
      },
      "size": {
        "width": 1680,
        "height": 4
      },
      "fill_color": [
        180,
        240,
        230,
        0.25
      ],
      "border_radius": 2
    },
    {
      "type": "text",
      "text": "${username}",
      "position": {
        "x": 520,
        "y": 1765
      },
      "font_path": "Outfit-Medium",
      "font_size": 56,
      "color": [
        55,
        65,
        81,
        1
      ],
      "align": "left",
      "max_width": 500,
      "font_style": "italic"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 520,
        "y": 1850
      },
      "font_path": "Outfit-Medium",
      "font_size": 40,
      "color": [
        99,
        102,
        241,
        0.98
      ],
      "align": "left",
      "max_width": 900,
      "underline": {
        "color": [
          99,
          102,
          241,
          0.24
        ],
        "thickness": 2
      }
    }
  ],
  "validation": {
    "question": {
      "field": "question",
      "type": "text",
      "minLength": 1,
      "maxLength": 28
    },
    "answer": {
      "field": "answer",
      "type": "text",
      "minLength": 150,
      "maxLength": 280
    },
    "username": {
      "field": "username",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 200
    },
    "samples": {
      "question": "How do turbines work?",
      "answer": "Wind turbines convert wind energy into electricity using blades that spin a generator, producing clean power for approximately 1,500 homes annually with minimal environmental impact.",
      "username": "@username",
      "website_url": "example.com"
    },
    "fieldPrompt": {
      "question": "a question in under 3-4 words",
      "answer": "a 30-40 words answer for the above question",
      "username": "@username"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/qa_template_2.png"
  }
}
{
  "name": "calendar_app_promo",
  "description": "Clean promotional template featuring a calendar app interface",
  "size": {
    "width": 2560,
    "height": 2560
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2560,
        "height": 2560
      },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": {
        "x": 142,
        "y": 190
      },
      "font_size": 227,
      "color": [
        52,
        64,
        84,
        1
      ],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 1422
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 142,
        "y": 1777
      },
      "size": {
        "width": 285,
        "height": 285
      },
      "circle_crop": true
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": {
        "x": 947,
        "y": 853
      },
      "size": {
        "width": 1446,
        "height": 3006
      },
      "border_radius": 47
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 142,
        "y": 2157
      },
      "font_size": 76,
      "color": [
        52,
        64,
        84,
        1
      ],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 120
    }
  ],
  "validation": {
    "image_url": {
      "field": "image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "subheading": {
      "field": "subheading",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "samples": {
      "image_url": "https://example.com/product_calendar.png",
      "heading": "Plan your day in a snap",
      "cta_text": "Get Started",
      "subheading": "Organize your schedule effortlessly with our intuitive app."
    },
    "fieldPrompt": {
      "image_url": "Generate a prompt for product image which has transparent background as a png image. Make sure just the product is visible and the background is transparent. Also dont keep any text in the image. Make sure it has transparent background makes sure it has transparent background (alpha PNG) and also has isolated object cut-out Isolated object cut-out on a completely transparent background (alpha PNG). No floor, no shadows, no reflections, no props, no textâ€”only the product, perfectly lit",
      "heading": "Plan your day in a snap"
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/calendar_app_promo.png"
  }
}
{
  "name": "coming_soon_page",
  "description": "Trendy Instagram-worthy Coming Soon design with vibrant gradient, glowing typography, and modern decorative elements.",
  "size": {
    "width": 2560,
    "height": 2560
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2560,
        "height": 2560
      },
      "fill_color": null,
      "gradient": {
        "type": "radial",
        "center": [
          0.5,
          0.5
        ],
        "colors": [
          "${theme_color}",
          "#fffefe"
        ],
        "direction": 135
      }
    },
    {
      "type": "text",
      "text": "${header_text}",
      "position": {
        "x": 1080,
        "y": 711
      },
      "font_path": "Poppins-Medium",
      "font_size": 90,
      "alignment": "center",
      "letter_spacing": 7.1,
      "color": [
        0,
        0,
        0,
        0.7
      ]
    },
    {
      "type": "text",
      "text": "Coming",
      "position": {
        "x": 1080,
        "y": 948
      },
      "font_path": "HappyMonkey-Regular",
      "font_size": 308,
      "alignment": "center",
      "letter_spacing": 9.5
    },
    {
      "type": "text",
      "text": "SOON",
      "position": {
        "x": 1080,
        "y": 1304
      },
      "font_path": "HappyMonkey-Regular",
      "font_size": 427,
      "alignment": "center"
    },
    {
      "type": "rectangle",
      "position": {
        "x": 1100,
        "y": 1920
      },
      "size": {
        "width": 800,
        "height": 190
      },
      "fill_color": "#000000",
      "border_radius": 50
    },
    {
      "type": "text",
      "text": "STAY TUNED",
      "position": {
        "x": 1200,
        "y": 1950
      },
      "font_path": "Outfit-Bold",
      "font_size": 95,
      "border_radius": 50,
      "color": "#ffffff",
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${website_url} | ${contact_email}",
      "position": {
        "x": 1100,
        "y": 2430
      },
      "font_path": "Outfit-Regular",
      "font_size": 60,
      "color": "#121321",
      "max_width": 1280,
      "alignment": "left"
    }
  ],
  "validation": {
    "header_text": {
      "field": "header_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "contact_email": {
      "field": "contact_email",
      "type": "email",
      "minLength": 5,
      "maxLength": 100
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 200
    },
    "contact_details": {
      "field": "contact_details",
      "type": "text",
      "minLength": 1,
      "maxLength": 200
    },
    "samples": {
      "header_text": "Launch Soon",
      "contact_email": "info@dolze.ai",
      "website_url": "dolze.ai",
      "contact_details": "Reach out at info@dolze.ai for updates."
    },
    "fieldPrompt": {
      "header_text": "a 2-3 word text for the coming soon page which would be placed above the coming soon text in the coming soon post for social media",
      "contact_email": "contact email"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/coming_soon_page.png"
  }
}
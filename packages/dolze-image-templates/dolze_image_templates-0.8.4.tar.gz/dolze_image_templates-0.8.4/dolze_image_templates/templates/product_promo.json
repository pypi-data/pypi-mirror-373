{
  "name": "product_promo",
  "description": "Gourmet burger promotion template with dark background and text overlays",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://i.postimg.cc/bJzN2BL1/jhunelle-francis-sardido-PPtcyr-AB5-UQ-unsplash.jpg",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "image_fit": "cover"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 60,
        "y": 60
      },
      "size": {
        "width": 300,
        "height": 90
      },
      "border_radius": 0,
      "image_fit": "cover"
    },
    {
      "type": "image",
      "image_url": "${gradient_bg}",
      "position": {
        "x": 0,
        "y": 500
      },
      "size": {
        "width": 1080,
        "height": 600
      },
      "image_fit": "cover"
    },
    {
      "type": "text",
      "text": "CULINARY EXPLORATIONS",
      "position": {
        "x": 60,
        "y": 600
      },
      "font_size": 32,
      "color": "#F5F5F5",
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 960
    },
    {
      "type": "text",
      "text": "Super King Burgers",
      "position": {
        "x": 60,
        "y": 650
      },
      "font_size": 72,
      "color": "#F5F5F5",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 960
    },
    {
      "type": "text",
      "text": "Discover the most unique flavors and try new food experiences. Limited spots available!",
      "position": {
        "x": 60,
        "y": 750
      },
      "font_size": 28,
      "color": "#F5F5F5",
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 960,
      "line_height": 1.4
    },
    {
      "type": "rectangle",
      "position": {
        "x": 60,
        "y": 880
      },
      "size": {
        "width": 240,
        "height": 80
      },
      "fill_color": "#f8f9fa",
      "border_radius": 60
    },
    {
      "type": "text",
      "text": "${button_text}",
      "position": {
        "x": 84,
        "y": 895
      },
      "font_size": 32,
      "color": "#1E1E1E",
      "font_path": "Poppins-Medium",
      "alignment": "left",
      "max_width": 400
    }
  ],
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "product_description": {
      "field": "product_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 200
    },
    "price": {
      "field": "price",
      "type": "text",
      "minLength": 1,
      "maxLength": 5
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "samples": {
      "product_image": "https://example.com/king_burger.jpg",
      "product_name": "Super King Burger",
      "product_description": "Triple patty burger with cheese, bacon, and our special sauce",
      "price": "$12.99",
      "theme_color": "#D84315"
    },
    "fieldPrompt": {
      "product_image": "A promotional food banner showcasing a hand holding a burger cup with grilled gourmet burgers inside",
      "product_name": "Name of the burger",
      "product_description": "Description of the burger ingredients",
      "price": "Price with currency symbol",
      "theme_color": "#D84315"
    }
  }
}
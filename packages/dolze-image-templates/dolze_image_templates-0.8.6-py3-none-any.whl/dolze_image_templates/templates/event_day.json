{
  "name": "event_day",
  "description": "Event day template",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "outline_color": null,
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "gradient": {
        "type": "radial",
        "center": [
          0.5,
          0.9
        ],
        "colors": [
          "#F8F8F8",
          "#ff429a"
        ],
        "direction": 90
      }
    },
    {
      "type": "text",
      "text": "${celebration_name}",
      "position": {
        "x": 70,
        "y": 180
      },
      "font_size": 120,
      "color": "#ffffff",
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "max_width": 940,
      "line_height": 1.2
    },
    {
      "type": "ribbon_frame",
      "text": "${celebration_text}",
      "position": {
        "x": 420,
        "y": 180
      },
      "font_size": 32,
      "text_color": [
        255,
        255,
        255
      ],
      "fill_color": [
        220,
        53,
        69
      ],
      "padding": 20,
      "pointer_size": 30,
      "rotation": -4,
      "triangle_direction": "closed"
    },
    {
      "type": "text",
      "text": "${celebration_description}",
      "position": {
        "x": 200,
        "y": 380
      },
      "font_size": 40,
      "color": "#feffff",
      "font_path": "Montserrat-Medium",
      "alignment": "center",
      "max_width": 680
    },
    {
      "type": "image",
      "image_url": "${celebration_image}",
      "position": {
        "x": 250,
        "y": 550
      },
      "size": {
        "width": 500,
        "height": 500
      }
    },
    {
      "type": "circle",
      "position": {
        "x": 320,
        "y": 820
      },
      "radius": 100
    },
    {
      "type": "cta_button",
      "text": "${sale_info}",
      "position": {
        "x": 20,
        "y": 960
      },
      "size": {
        "width": 700,
        "height": 100
      },
      "auto_width": true,
      "bg_color": "#ffffff",
      "text_color": "#111111",
      "font_size": 30,
      "font_path": "Outfit-Bold",
      "corner_radius": 20
    }
  ],
  "validation": {
    "celebration_name": {
      "field": "celebration_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "celebration_text": {
      "field": "celebration_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "celebration_description": {
      "field": "celebration_description",
      "type": "text",
      "minLength": 40,
      "maxLength": 70
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "samples": {
      "celebration_name": "Eco Fest",
      "celebration_text": "Green Day",
      "celebration_description": "Join us for a special eco-friendly celebration event!",
      "theme_color": "#FF5733"
    },
    "fieldPrompt": {
      "celebration_name": "Event Name in 2-3 words",
      "celebration_text": "Special Day in 2-3 words",
      "celebration_description": "Join us for a special celebration or something similar in 8-10 words",
      "theme_color": "#FF5733"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/event_day.png"
  }
}
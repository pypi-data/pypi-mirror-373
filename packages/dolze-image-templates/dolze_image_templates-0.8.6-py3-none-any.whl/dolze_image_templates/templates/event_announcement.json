{
  "name": "event_announcement",
  "description": "Event announcement template",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "validation": {
    "event_image": {
      "field": "event_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "event_name": {
      "field": "event_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "event_description": {
      "field": "event_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 150
    },
    "company_name": {
      "field": "company_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "samples": {
      "event_image": "https://example.com/event_circle.jpg",
      "event_name": "Sale Alert",
      "event_description": "Join our exclusive sale event this weekend!",
      "company_name": "Dolze AI"
    },
    "fieldPrompt": {
      "event_image": "Generate a high-quality, professional square image related to a business event. The design should be clean, modern, and visually engaging while maintaining a corporate tone. It should clearly convey the essence of events such as conferences, seminars, networking sessions, or product launches. Use a balanced color palette, professional typography, and subtle business-themed elements (like abstract patterns, cityscapes, silhouettes of people networking, or stage lighting). The image must be optimized for square format, making it suitable for business presentations, social media, and promotional material.",
      "event_name": "Name of the event (e.g., 'Sale alert') in under 10 chars",
      "event_description": "Brief description of the event in under 100 chars",
      "company_name": "Name of the company hosting the event in under 50 chars"
    }
  },
  "components": [
    {
      "type": "image",
      "image_url": "${event_image}",
      "position": {
        "x": -200,
        "y": -160
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "aspect_ratio": "stretch",
      "circle_crop": true
    },
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templates/base7535769c-2602-4635-8366-2b6c1f0ff2dc.png",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "aspect_ratio": "contain"
    },
    {
      "type": "text",
      "text": "${event_name}",
      "position": {
        "x": 400,
        "y": 750
      },
      "font_size": 80,
      "color": [255, 255, 255, 1.0],
      "font_path": "CormorantGaramond-Bold",
      "alignment": "center",
      "max_width": 240,
      "line_spacing": 1.1
    },
    {
      "type": "text",
      "text": "${event_description}",
      "position": {
        "x": 450,
        "y": 990
      },
      "font_size": 33,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-SemiBold",
      "alignment": "left",
      "max_width": 680
    },
    {
      "type": "text",
      "text": "${company_name}",
      "position": {
        "x": 500,
        "y": 15
      },
      "font_size": 40,
      "color": [255, 255, 255, 1.0],
      "font_path": "Raleway-Bold",
      "alignment": "right",
      "max_width": 550,
      "line_spacing": 1.1
    }
  ],
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templates/baseevent_announcement.png"
  }
}

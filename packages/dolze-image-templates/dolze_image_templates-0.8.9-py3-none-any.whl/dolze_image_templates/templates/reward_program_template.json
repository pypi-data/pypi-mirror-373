{
  "name": "reward_program_template",
  "description": "Stamped Loyalty style template with purple background, central image, CTA, and people tags",
  "size": {
    "width": 540,
    "height": 1080
  },
  "use_base_image": false,
  "validation": {
    "logo_url": {
      "field": "logo_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "points": {
      "field": "points",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "samples": {
      "logo_url": "https://example.com/cafe_logo.png",
      "heading": "Loyalty Rewards",
      "points": "250",
      "theme_color": "#795548",
      "cta_text": "Redeem Now"
    },
    "fieldPrompt": {
      "logo_url": "Upload your business logo with transparent background. The logo should be clear and recognizable at different sizes.",
      "heading": "[1-30 chars] Enter a catchy name for your loyalty program that will excite customers (e.g., 'Elite Rewards', 'Gold Member Club').",
      "points": "[1-10 chars] Enter the number of points being awarded or required for redemption (e.g., '250', '1,000').",
      "theme_color": "[4-7 chars] Select a hex color code (e.g., #795548) that matches your brand identity for the loyalty program.",
      "cta_text": "[1-20 chars] Add a clear call-to-action that encourages customers to engage with your loyalty program (e.g., 'Join Now', 'Redeem Points', 'Earn More')."
    }
  },
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 540,
        "height": 1080
      },
      "fill_color": "#9A3DFE",
      "border_radius": 0
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 160,
        "y": 48
      },
      "size": {
        "width": 200,
        "height": 60
      },
      "image_fit": "contain"
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": {
        "x": 40,
        "y": 135
      },
      "font_size": 48,
      "color": "#FFFFFF",
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "max_width": 460,
      "line_height": 1.3
    },
    {
      "type": "rectangle",
      "position": {
        "x": 150,
        "y": 422
      },
      "size": {
        "width": 240,
        "height": 60
      },
      "fill_color": "#1D1D2C",
      "border_radius": 16
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 170,
        "y": 435
      },
      "font_size": 24,
      "color": "#FFFFFF",
      "font_path": "Poppins-Medium",
      "alignment": "center",
      "max_width": 200
    },
    {
      "type": "image",
      "image_url": "https://i.postimg.cc/8kXNxS2q/Frame-1244832598.png",
      "position": {
        "x": 0,
        "y": 560
      },
      "size": {
        "width": 540,
        "height": 540
      },
      "image_fit": "cover"
    }
  ]
}

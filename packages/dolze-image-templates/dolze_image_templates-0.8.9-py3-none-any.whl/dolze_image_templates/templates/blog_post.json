{
  "name": "blog_post",
  "description": "Aesthetic Instagram post template with centered CTA, extended background, and subtle gradients",
  "size": {
    "width": 2560,
    "height": 2560
  },
  "use_base_image": false,
  "validation": {
    "title": {
      "field": "title",
      "type": "text",
      "minLength": 1,
      "maxLength": 60
    },
    "author": {
      "field": "author",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "read_time": {
      "field": "read_time",
      "type": "number",
      "minLength": 1,
      "maxLength": 3
    },
    "image_url": {
      "field": "image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 200
    },
    "publish_date": {
      "field": "publish_date",
      "type": "text",
      "minLength": 10,
      "maxLength": 10
    },
    "excerpt": {
      "field": "excerpt",
      "type": "text",
      "minLength": 1,
      "maxLength": 200
    },
    "samples": {
      "title": "How to be environment conscious without being weird",
      "author": "@username",
      "read_time": 4,
      "image_url": "https://example.com/eco_scene.jpg",
      "website_url": "example.com",
      "publish_date": "2025-06-22",
      "excerpt": "Learn eco-friendly habits that fit seamlessly into your daily life."
    },
    "fieldPrompt": {
      "title": "Write a compelling blog post title that captures attention and clearly indicates the post's topic. Keep it under 60 characters.",
      "author": "Enter your name or username as you'd like it to appear on the post (max 50 characters).",
      "read_time": "Estimated reading time in minutes (1-999). Example: '4' for 4 minutes.",
      "image_url": "Create a high-quality, engaging image that visually represents your blog post. The image should be relevant to your content and visually appealing for social media sharing.",
      "website_url": "Enter the full URL where readers can find more of your content (e.g., 'yourblog.com' or 'medium.com/yourusername').",
      "publish_date": "Enter the publication date in YYYY-MM-DD format (e.g., 2025-06-22).",
      "excerpt": "Write a brief, engaging summary of your blog post (max 200 characters). This will be displayed as a preview of your content."
    }
  },
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2560,
        "height": 2560
      },
      "fill_color": null,
      "gradient_config": {
        "type": "linear",
        "colors": ["#FEE9E1", "#F5C7D0"],
        "direction": 45
      },
      "outline_color": null
    },
    {
      "type": "rectangle",
      "position": {
        "x": 142,
        "y": 356
      },
      "size": {
        "width": 2276,
        "height": 2088
      },
      "fill_color": null,
      "gradient_config": {
        "type": "linear",
        "colors": ["#FFFFFF", "#F8F8F8"],
        "direction": 90
      },
      "outline_color": null,
      "border_radius": 95
    },
    {
      "type": "image",
      "image_url": "${image_url}",
      "position": {
        "x": 142,
        "y": 356
      },
      "size": {
        "width": 2276,
        "height": 1138
      },
      "border_width": 0,
      "border_radius": 95
    },
    {
      "type": "text",
      "text": "${title}",
      "position": {
        "x": 237,
        "y": 1614
      },
      "font_size": 114,
      "color": [40, 40, 40, 1],
      "font_path": "Outfit-Bold",
      "alignment": "left",
      "max_width": 2086,
      "line_height": 1.3
    },
    {
      "type": "text",
      "text": "by ${author} â€¢ ${read_time} min",
      "position": {
        "x": 237,
        "y": 1948
      },
      "font_size": 76,
      "color": [100, 100, 100, 1],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 2086
    },
    {
      "type": "cta_button",
      "text": "Read now",
      "position": {
        "x": 237,
        "y": 2184
      },
      "size": {
        "width": 616,
        "height": 190
      },
      "font_size": 81,
      "color": [255, 255, 255, 1],
      "font_path": "Outfit-Medium",
      "alignment": "center",
      "max_width": 616,
      "line_height": 1.5,
      "corner_radius": 25
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 142,
        "y": 142
      },
      "size": {
        "width": 190,
        "height": 190
      },
      "circle_crop": true,
      "border_width": 10,
      "border_color": "#FFFFFF"
    },
    {
      "type": "rectangle",
      "position": {
        "x": 237,
        "y": 1542
      },
      "size": {
        "width": 190,
        "height": 9
      },
      "fill_color": [255, 100, 100, 1],
      "border_radius": 5
    }
  ],
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/blog_post.png"
  }
}

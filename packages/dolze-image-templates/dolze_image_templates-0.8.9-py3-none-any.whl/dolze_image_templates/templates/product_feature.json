{
  "name": "product_feature",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/mbcEtwwJKCf7jn4GnfzFm1thlhC3/6829afe6925fb5ef8c087942/business_assets/BeigeGreenMinimalProductFeatureInstagramPost.png",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "rectangle",
      "position": {
        "x": 200,
        "y": 200
      },
      "size": {
        "width": 1100,
        "height": 400
      },
      "fill_color": "#6d6c40",
      "alignment": "center",
      "border_radius": 190
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": {
        "x": 500,
        "y": 130
      },
      "size": {
        "width": 600,
        "height": 600
      },
      "circle_crop": false
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": {
        "x": 270,
        "y": 250
      },
      "font_path": "Poppins-Light",
      "font_size": 60,
      "max_width": 500,
      "color": [255, 255, 255, 1.0],
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${feature_title}",
      "position": {
        "x": 270,
        "y": 410
      },
      "font_path": "GreatVibes-Regular",
      "font_size": 100,
      "color": [255, 255, 255, 1.0],
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${feature1}",
      "position": {
        "x": 200,
        "y": 790
      },
      "font_path": "Poppins-Light",
      "font_size": 30,
      "max_width": 330,
      "color": "#6d6c40",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${feature2}",
      "position": {
        "x": 200,
        "y": 920
      },
      "font_path": "Poppins-Light",
      "font_size": 30,
      "max_width": 330,
      "color": "#6d6c40",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${feature3}",
      "position": {
        "x": 630,
        "y": 790
      },
      "font_path": "Poppins-Light",
      "font_size": 30,
      "max_width": 350,
      "color": "#6d6c40",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${feature4}",
      "position": {
        "x": 630,
        "y": 920
      },
      "font_path": "Poppins-Light",
      "font_size": 30,
      "max_width": 350,
      "color": "#6d6c40",
      "alignment": "left"
    }
  ],
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "feature1": {
      "field": "feature1",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "feature2": {
      "field": "feature2",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "feature3": {
      "field": "feature3",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "feature4": {
      "field": "feature4",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "feature_title": {
      "field": "feature_title",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "samples": {
      "product_image": "https://example.com/nasal_drops.png",
      "feature1": "This nasal drop is good",
      "feature2": "Really great product",
      "feature3": "Clears nose with ease",
      "feature4": "Long lasting effect",
      "feature_title": "Features",
      "product_name": "Nasal Drops"
    },
    "fieldPrompt": {
      "product_image": "generate a prompt for a high-quality image of your product. For best results, use a clean, well-lit photo with a simple background that makes the product stand out.",
      "product_name": "Enter the name of your product (e.g., 'Nasal Drops', 'Organic Face Cream'). Keep it concise and clear.",
      "feature_title": "Enter a title for your features section (e.g., 'Key Features', 'Why Choose Us', 'Benefits').",
      "feature1": "Enter the first key feature or benefit (max 50 characters). Example: 'Fast-acting formula', '24-hour relief'.",
      "feature2": "Enter the second key feature or benefit (max 50 characters). Example: 'Dermatologist tested', '100% natural ingredients'.",
      "feature3": "Enter the third key feature or benefit (max 50 characters). Example: 'Suitable for all skin types', 'Cruelty-free'.",
      "feature4": "Enter the fourth key feature or benefit (max 50 characters). Example: 'Money-back guarantee', 'Eco-friendly packaging'."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatesproduct_feature.png"
  }
}

  "validation": {
    "testimonial_text": {
      "field": "testimonial_text",
      "type": "text",
      "minLength": 20,
      "maxLength": 200
    },
    "user_avatar": {
      "field": "user_avatar",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "user_name": {
      "field": "user_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "user_title": {
      "field": "user_title",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 200
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "samples": {
      "testimonial_text": "This product transformed our workflow. Highly recommend it!",
      "user_avatar": "https://example.com/user_avatar.jpg",
      "user_name": "Jane Doe",
      "user_title": "CEO, TechCorp",
      "website_url": "dolze.ai/download",
      "theme_color": "#4A90E2"
    },
    "fieldPrompt": {
      "testimonial_text": "Share what customers are saying about your product/service (2-3 sentences)",
      "user_avatar": "URL to customer's profile picture mostly use some working stock images",
      "user_name": "Customer Name in under 50 chars",
      "user_title": "Customer Title/Company in under 100 chars",
      "website_url": "dolze.ai/download",
      "theme_color": "a hex color code for the theme color(eg: #4A90E2)"
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/testimonials_template_2.png"
  }

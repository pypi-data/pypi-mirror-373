{
  "name": "event_announcement",
  "description": "Event announcement template",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "validation": {
    "event_image": {
      "field": "event_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "event_name": {
      "field": "event_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "event_description": {
      "field": "event_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 150
    },
    "company_name": {
      "field": "company_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "samples": {
      "event_image": "https://example.com/event_circle.jpg",
      "event_name": "Sale Alert",
      "event_description": "Join our exclusive sale event this weekend!",
      "company_name": "Dolze AI"
    },
    "fieldPrompt": {
      "event_image": "generate a prompt for a high-quality image that represents your event. For best results, use a square image with good contrast. The image should be relevant to your event type (e.g., product photos for sales, speaker images for webinars, or venue shots for in-person events).",
      "event_name": "Enter a short, attention-grabbing name for your event (max 10 characters). Examples: 'SALE', 'SUMMIT 25', 'WEBINAR', 'GRAND OPENING'.",
      "event_description": "Write a compelling description of your event (max 150 characters). Include key details like date, time, location (if applicable), and what attendees can expect. Make it engaging and informative.",
      "company_name": "Enter your company or organization name (max 30 characters). This will be displayed as the host of the event."
    }
  },
  "components": [
    {
      "type": "image",
      "image_url": "${event_image}",
      "position": {
        "x": -200,
        "y": -160
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "aspect_ratio": "stretch",
      "circle_crop": true
    },
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templates/base7535769c-2602-4635-8366-2b6c1f0ff2dc.png",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "aspect_ratio": "contain"
    },
    {
      "type": "text",
      "text": "${event_name}",
      "position": {
        "x": 400,
        "y": 750
      },
      "font_size": 80,
      "color": [255, 255, 255, 1.0],
      "font_path": "CormorantGaramond-Bold",
      "alignment": "center",
      "max_width": 240,
      "line_spacing": 1.1
    },
    {
      "type": "text",
      "text": "${event_description}",
      "position": {
        "x": 450,
        "y": 990
      },
      "font_size": 33,
      "color": [255, 255, 255, 1.0],
      "font_path": "Montserrat-SemiBold",
      "alignment": "left",
      "max_width": 680
    },
    {
      "type": "text",
      "text": "${company_name}",
      "position": {
        "x": 500,
        "y": 15
      },
      "font_size": 40,
      "color": [255, 255, 255, 1.0],
      "font_path": "Raleway-Bold",
      "alignment": "right",
      "max_width": 550,
      "line_spacing": 1.1
    }
  ],
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templates/baseevent_announcement.png"
  }
}

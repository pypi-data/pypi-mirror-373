{
  "name": "qa_template",
  "description": "Clean Q&A template with centered profile picture and question/answer layout",
  "size": {
    "width": 2560,
    "height": 2560
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2560,
        "height": 2560
      },
      "fill_color": "${theme_color}",
      "outline_color": null
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 250,
        "y": 250
      },
      "size": {
        "width": 300,
        "height": 300
      },
      "circle_crop": true
    },
    {
      "type": "text",
      "text": "${question}",
      "position": {
        "x": 250,
        "y": 850
      },
      "font_size": 240,
      "color": [40, 40, 40],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "max_width": 2100
    },
    {
      "type": "text",
      "text": "${answer}",
      "position": {
        "x": 250,
        "y": 1450
      },
      "font_size": 120,
      "color": [100, 100, 100],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "max_width": 2000,
      "line_spacing": 1.4
    },
    {
      "type": "text",
      "text": "${username}",
      "position": {
        "x": 280,
        "y": 2400
      },
      "font_size": 55,
      "color": [1, 1, 1],
      "font_path": "Roboto-Italic",
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 1800,
        "y": 2400
      },
      "font_size": 55,
      "color": [1, 1, 1],
      "font_path": "Roboto-Italic",
      "alignment": "center"
    }
  ],
  "validation": {
    "question": {
      "field": "question",
      "type": "text",
      "minLength": 1,
      "maxLength": 28
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "answer": {
      "field": "answer",
      "type": "text",
      "minLength": 1,
      "maxLength": 200
    },
    "username": {
      "field": "username",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "website_url": {
      "field": "website_url",
      "type": "url",
      "minLength": 1,
      "maxLength": 200
    },
    "samples": {
      "question": "What is renewable energy?",
      "answer": "One wind turbine can power 1,500 homes annually!",
      "username": "@username",
      "website_url": "example.com",
      "theme_color": "#795548"
    },
    "fieldPrompt": {
      "question": "[1-28 chars] Enter a clear, concise question (3-4 words recommended) that will grab attention and encourage engagement.",
      "answer": "[1-200 chars] Provide a detailed, informative answer to the question. Include interesting facts or statistics when possible to make it more engaging.",
      "username": "[1-50 chars] Enter your username or brand name that will be displayed as the source of this Q&A.",
      "website_url": "[1-200 chars] Enter your website URL where people can learn more about you or your business.",
      "theme_color": "[4-7 chars] Choose a hex color code (e.g., #795548) that matches your brand or the mood you want to convey."
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/qa_template.png"
  }
}

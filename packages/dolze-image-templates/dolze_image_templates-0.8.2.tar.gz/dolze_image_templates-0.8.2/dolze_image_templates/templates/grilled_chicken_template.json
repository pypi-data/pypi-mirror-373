{
  "name": "grilled_chicken_template",
  "description": "Bold grilled chicken ad with yellow-orange background and central product image.",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "product_description": {
      "field": "product_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 200
    },
    "price": {
      "field": "price",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "samples": {
      "product_image": "https://example.com/grilled_chicken.jpg",
      "product_name": "Grilled Chicken Platter",
      "product_description": "Tender grilled chicken served with fresh vegetables and homemade sauce",
      "price": "â‚¹299",
      "theme_color": "#D32F2F"
    },
    "fieldPrompt": {
      "product_image": "Generate a prompt for an appetizing grilled chicken dish image",
      "product_name": "Name of the chicken dish",
      "product_description": "Description of the chicken dish and its ingredients",
      "price": "Price in INR",
      "theme_color": "#D32F2F"
    }
  },
  "components": [
    {
      "type": "image",
      "image_url": "${background_image}",
      "position": { "x": 0, "y": 0 },
      "size": { "width": 1080, "height": 1080 },
      "image_fit": "cover"
    },
    {
      "type": "image",
      "image_url": "${chicken_image_url}",
      "position": { "x": 190, "y": 310 },
      "size": { "width": 700, "height": 700 },
      "image_fit": "contain"
    },
    {
      "type": "text",
      "text": "${headline_top}",
      "position": { "x": 290, "y": 140 },
      "font_size": 64,
      "color": "#2B0F00",
      "font_path": "Dream_Avenue",
      "alignment": "center",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${headline_bottom}",
      "position": { "x": 140, "y": 210 },
      "font_size": 80,
      "color": "#2B0F00",
      "font_path": "Poppins-ExtraBold",
      "alignment": "center",
      "max_width": 800
    },
    {
      "type": "rectangle",
      "position": { "x": 760, "y": 750 },
      "size": { "width": 140, "height": 140 },
      "fill_color": "#C90000",
      "border_radius": 70
    },
    {
      "type": "text",
      "text": "${price}",
      "position": { "x": 790, "y": 775 },
      "font_size": 48,
      "color": "#FFFFFF",
      "font_path": "Poppins-Bold",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${price_note}",
      "position": { "x": 800, "y": 825 },
      "font_size": 24,
      "color": "#FFFFFF",
      "font_path": "Poppins-Medium",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "FOR DELIVERY",
      "position": { "x": 60, "y": 960 },
      "font_size": 20,
      "color": "#2B0F00",
      "font_path": "Poppins-Regular",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${contact_number}",
      "position": { "x": 60, "y": 990 },
      "font_size": 28,
      "color": "#2B0F00",
      "font_path": "Poppins-Bold",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${address_line1}",
      "position": { "x": 520, "y": 960 },
      "font_size": 22,
      "color": "#2B0F00",
      "font_path": "Poppins-Regular",
      "alignment": "right",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${address_line2}",
      "position": { "x": 520, "y": 990 },
      "font_size": 22,
      "color": "#2B0F00",
      "font_path": "Poppins-Regular",
      "alignment": "right",
      "max_width": 500
    },
    {
      "type": "text",
      "text": "${username}",
      "position": { "x": 60, "y": 60 },
      "font_size": 22,
      "color": "#2B0F00",
      "font_path": "Poppins-Medium",
      "alignment": "left"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 820, "y": 50 },
      "size": { "width": 200, "height": 70 },
      "image_fit": "contain"
    }
  ]
}

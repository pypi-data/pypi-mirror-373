{
  "name": "testing_template",
  "description": "Modern and elegant blog post template with enhanced visual hierarchy and aesthetics",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 365,
        "y": 110
      },
      "size": {
        "width": 350,
        "height": 105
      },
      "border_radius": 0,
      "image_fit": "cover"
    },
    {
      "type": "text",
      "text": "${excerpt}",
      "position": {
        "x": 140,
        "y": 300
      },
      "font_size": 60,
      "color": "#ffffff",
      "font_path": "Poppins-Regular",
      "alignment": "center",
      "max_width": 800,
      "line_height": 1.5
    },
    {
      "type": "text",
      "text": "${text_bold}",
      "position": {
        "x": 80,
        "y": 333
      },
      "font_size": 90,
      "color": "#222222",
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "rotate": 7,
      "max_width": 800,
      "line_height": 1.2,
      "letter_spacing": -0.5
    },
    {
      "type": "text",
      "text": "Read more at ${website_url}",
      "position": {
        "x": 140,
        "y": 990
      },
      "font_size": 32,
      "color": "#ffffff",
      "font_path": "Poppins-Regular",
      "alignment": "center",
      "max_width": 800,
      "line_height": 1.2,
      "letter_spacing": -0.5
    }
  ],
  "validation": {
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "subheading": {
      "field": "subheading",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "image_url": {
      "field": "image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "samples": {
      "heading": "Test Template",
      "subheading": "This is a template for testing purposes",
      "image_url": "https://example.com/test_image.jpg"
    },
    "fieldPrompt": {
      "heading": "A test heading",
      "subheading": "A test subheading",
      "image_url": "Generate a prompt for a test image"
    }
  }
}
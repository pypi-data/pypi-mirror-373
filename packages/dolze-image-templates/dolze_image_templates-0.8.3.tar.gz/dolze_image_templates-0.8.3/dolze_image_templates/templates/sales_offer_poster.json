{
  "name": "sales_offer_poster",
  "description": "Promo template with blue background, bold headline, cookie image, and CTA button",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "validation": {
    "background_image_url": {
      "field": "background_image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
       "isTransparentImage": true
    },
    "logo_url": {
      "field": "logo_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "headline": {
      "field": "headline",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "subtitle": {
      "field": "subtitle",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "juice_image_url": {
      "field": "juice_image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "samples": {
      "background_image_url": "https://example.com/fruit_background.jpg",
      "logo_url": "https://example.com/juice_logo.png",
      "headline": "Fresh Squeezed Juice",
      "subtitle": "100% Natural, No Added Sugar",
      "theme_color": "#4CAF50",
      "cta_text": "Try Now",
      "juice_image_url": "https://example.com/orange_juice.png"
    },
    "fieldPrompt": {
      "background_image_url": "Create a bright, colorful, and energetic background filled with a variety of fresh fruits like oranges, strawberries, kiwis, and pineapples. Use a tropical, summery vibe with juicy textures, splashes of watercolor, and playful patterns. Ensure the design feels fresh, modern, and eye-catching while keeping space in the center for text or product placement",
      "logo_url": "Juice brand logo image",
      "headline": "A catchy headline for juice promotion",
      "subtitle": "A brief description of the juice benefits",
      "theme_color": "#4CAF50",
      "cta_text": "Call to action text",
      "juice_image_url": "Generate a prompt for a refreshing juice image"
    }
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "image_fit": "cover"
    },

    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 400,
        "y": 40
      },
      "size": {
        "width": 250,
        "height": 75
      },
      "image_fit": "contain"
    },

    {
      "type": "text",
      "text": "${headline}",
      "position": {
        "x": 60,
        "y": 140
      },
      "font_size": 90,
      "color": "#ffffff",
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "max_width": 960
    },

    {
      "type": "text",
      "text": "${subtitle}",
      "position": {
        "x": 60,
        "y": 255
      },
      "font_size": 40,
      "color": "#ffffff",
      "font_path": "Poppins-Regular",
      "alignment": "center",
      "max_width": 960
    },
    {
      "type": "rectangle",
      "position": {
        "x": 390,
        "y": 340
      },
      "size": {
        "width": 300,
        "height": 70
      },
      "fill_color": "${theme_color}",
      "border_radius": 35
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 390,
        "y": 355
      },
      "font_size": 30,
      "color": "#ffffff",
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "max_width": 300
    },
    {
      "type": "image",
      "image_url": "${juice_image_url}",
      "position": {
        "x": 160,
        "y": 360
      },
      "size": {
        "width": 750,
        "height": 750
      },
      "image_fit": "contain"
    }
  ]
}

{
  "name": "product_launch_teaser",
  "description": "Shelf Engine style template with teal background, statistics, and product imagery",
  "size": {
    "width": 540,
    "height": 1080
  },
  "use_base_image": false,
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
       "isTransparentImage": true
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "product_description": {
      "field": "product_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "price": {
      "field": "price",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "discount": {
      "field": "discount",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "samples": {
      "product_image": "https://example.com/engine_product.jpg",
      "product_name": "High-Performance Engine",
      "product_description": "Advanced automotive engine with superior fuel efficiency and power output",
      "price": "$1,299",
      "discount": "15% OFF",
      "theme_color": "#F57C00"
    },
    "fieldPrompt": {
      "product_image": "Create a modern, minimalistic poster template with space for a short, bold heading, a brief description, and a prominent call-to-action button.",
      "product_name": "Name of the engine or mechanical product",
      "product_description": "Description of the product features and benefits",
      "price": "Price with currency symbol",
      "discount": "Discount percentage",
      "theme_color": "#F57C00"
    }
  },
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 540,
        "height": 1080
      },
      "fill_color": "#20B2AA",
      "border_radius": 0
    },
    {
      "type": "text",
      "text": "${headline}",
      "position": {
        "x": 48,
        "y": 70
      },
      "font_size": 64,
      "color": "#002B3D",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 460
    },
    {
      "type": "text",
      "text": "${subtitle}",
      "position": {
        "x": 48,
        "y": 260
      },
      "font_size": 32,
      "color": "#002B3D",
      "font_path": "Poppins-Regular",
      "alignment": "left",
      "max_width": 460,
      "line_height": 1.3
    },
    {
      "type": "rectangle",
      "position": {
        "x": 48,
        "y": 420
      },
      "size": {
        "width": 280,
        "height": 60
      },
      "fill_color": "#002B3D",
      "border_radius": 30
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 67,
        "y": 432
      },
      "font_size": 24,
      "color": "#FFFFFF",
      "font_path": "Poppins-Medium",
      "alignment": "center",
      "max_width": 240
    },
    {
      "type": "image",
      "image_url": "${bottles_image}",
      "position": {
        "x": 0,
        "y": 580
      },
      "size": {
        "width": 640,
        "height": 400
      },
      "image_fit": "cover"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 177,
        "y": 960
      },
      "size": {
        "width": 200,
        "height": 70
      },
      "image_fit": "contain"
    }
  ]
}

{
  "name": "brand_info",
  "description": "Aesthetic Instagram post template with centered CTA, extended background, and subtle gradients",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${product_image}",
      "tint": {
        "type": "linear",
        "colors": [
          [
            1,
            1,
            1,
            0.3
          ],
          [
            1,
            1,
            1,
            0.4
          ],
          [
            1,
            1,
            1,
            0.5
          ],
          [
            1,
            1,
            1,
            0.6
          ],
          [
            1,
            1,
            1,
            0.8
          ],
          "${theme_color}",
          "${theme_color}",
          "${theme_color}"
        ],
        "opacity": 0.9,
        "direction": 90
      },
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": {
        "x": 80,
        "y": 540
      },
      "font_size": 80,
      "color": [
        255,
        255,
        255,
        1
      ],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 700
    },
    {
      "type": "text",
      "text": "${subheading}",
      "line_height": 1.4,
      "position": {
        "x": 80,
        "y": 740
      },
      "font_size": 38,
      "color": [
        255,
        255,
        255,
        1
      ],
      "font_path": "Poppins-Light",
      "alignment": "left",
      "max_width": 850
    },
    {
      "type": "cta_button",
      "text": "${cta_text}",
      "position": {
        "x": 80,
        "y": 910
      },
      "alignment": "center",
      "size": {
        "height": 70,
        "width": 100
      },
      "auto_width": true,
      "padding": 120,
      "bg_color": [
        1,
        1,
        1,
        0.1
      ],
      "text_color": "#ffffff",
      "font_size": 30,
      "font_path": "Poppins-Light",
      "corner_radius": 80,
      "transparent_background": true
    },
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 1000
      },
      "size": {
        "width": 1748,
        "height": 4
      },
      "fill_color": [
        255,
        255,
        255,
        1
      ]
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 0,
        "y": 1020
      },
      "font_size": 29,
      "color": [
        255,
        255,
        255,
        1
      ],
      "font_path": "Poppins-Medium",
      "alignment": "center",
      "max_width": 1080
    }
  ],
  "validation": {
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 35
    },
    "subheading": {
      "field": "subheading",
      "type": "text",
      "minLength": 100,
      "maxLength": 175
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 10,
      "maxLength": 28
    },
    "samples": {
      "product_image": "https://example.com/company_culture.jpg",
      "heading": "Our Team Spirit",
      "subheading": "We foster collaboration and innovation to build a thriving workplace culture.",
      "cta_text": "Join Our Team"
    },
    "fieldPrompt": {
      "product_image": "generate a prompt for a sqwuare image for background image of the post for a post showing things about comanpy culture and bonding",
      "heading": "a heading for the post in under 4-5 words",
      "subheading": "a subheading for the psot in under 20-25 words",
      "cta_text": "a cta for the text in 2-4 words"
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatesbrand_info.png"
  }
}
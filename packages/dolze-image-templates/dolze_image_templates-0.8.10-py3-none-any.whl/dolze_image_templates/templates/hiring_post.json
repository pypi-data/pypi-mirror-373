{
  "name": "hiring_post",
  "description": "Modern hiring post with bold text and accent color for job position",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "fill_color": "#7d00eb",
      "outline_color": null,
      "border_radius": 0
    },
    {
      "type": "text",
      "text": "${heading}",
      "position": {
        "x": 100,
        "y": 100
      },
      "font_size": 140,
      "color": [255, 255, 255],
      "font_path": "Montserrat-Bold",
      "alignment": "left",
      "max_width": 900,
      "line_height": 1.1
    },
    {
      "type": "text",
      "text": "${subheading}",
      "position": {
        "x": 100,
        "y": 500
      },
      "font_size": 45,
      "color": [230, 250, 250],
      "font_path": "Outfit-Regular",
      "alignment": "left",
      "max_width": 900,
      "line_height": 1.2
    },
    {
      "type": "text",
      "text": "hiring",
      "position": {
        "x": 100,
        "y": 700
      },
      "font_size": 60,
      "color": [255, 255, 255],
      "font_path": "Outfit-Bold",
      "alignment": "left"
    },
    {
      "type": "cta_button",
      "text": "${job_title}",
      "position": {
        "x": 280,
        "y": 690
      },
      "font_size": 60,
      "size": {
        "width": 800,
        "height": 100
      },
      "bg_color": "#ff3d3d",
      "text_color": [255, 255, 255],
      "font_path": "Outfit-Bold",
      "alignment": "left",
      "auto_width": true
    },
    {
      "type": "text",
      "text": "${company_name}",
      "position": {
        "x": 100,
        "y": 950
      },
      "font_size": 50,
      "color": [255, 255, 255],
      "font_path": "Outfit-Regular",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 750,
        "y": 950
      },
      "font_size": 50,
      "color": [255, 255, 255],
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "underline": "normal"
    }
  ],
  "validation": {
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "subheading": {
      "field": "subheading",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 14
    },
    "job_title": {
      "field": "job_title",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "company_name": {
      "field": "company_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "samples": {
      "heading": "We're Hiring!",
      "subheading": "Join our amazing team. We're looking for talented individuals.",
      "theme_color": "#7d00eb",
      "cta_text": "Apply Now",
      "job_title": "Software Engineer",
      "company_name": "Dolze AI"
    },
    "fieldPrompt": {
      "heading": "Enter a short, attention-grabbing heading (2-3 words). Examples: 'We're Hiring!', 'Join Our Team', 'Now Recruiting'.",
      "subheading": "Write a brief description about your company and the opportunity (1-2 sentences). Example: 'Join our innovative team of problem-solvers and make an impact in the tech industry.'",
      "job_title": "Enter the job position you're hiring for (max 3-4 words). Examples: 'Senior Developer', 'Marketing Manager', 'UX Designer'.",
      "company_name": "Enter your company name as you'd like it to appear on the post (e.g., 'Acme Inc.', 'TechStart Solutions').",
      "cta_text": "Enter call-to-action text (e.g., 'Apply Now', 'Join Us', 'Learn More'). Keep it short and action-oriented.",
      "theme_color": "Enter a hex color code for the background (e.g., #7d00eb for purple). Choose a color that represents your brand."
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/hiring_post.png"
  }
}

{
  "name": "event_alert",
  "description": "Aesthetic Instagram post template with centered CTA, extended background, and subtle gradients",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "fill_color": "#0055fe"
    },
    {
      "type": "text",
      "text": "${company_name}",
      "position": {
        "x": 0,
        "y": 0
      },
      "font_size": 50,
      "max_width": 1080,
      "color": "#ffffff",
      "font_path": "Outfit-Regular",
      "alignment": "center"
    },
    {
      "type": "cta_button_group",
      "position": {
        "x": 0,
        "y": 100
      },
      "spacing": 20,
      "max_width": 1080,
      "line_height": 1.5,
      "align": "center",
      "items": [
        {
          "type": "cta_button",
          "text": "${event_type}",
          "auto_width": true,
          "bg_color": "#91b6ff",
          "text_color": "#ffffff",
          "font_size": 30,
          "font_path": "Montserrat-Medium",
          "corner_radius": 30,
          "padding": 60
        },
        {
          "type": "cta_button",
          "text": "${event_date}",
          "auto_width": true,
          "bg_color": "#ffffff",
          "text_color": "#0055fe",
          "font_size": 30,
          "font_path": "Montserrat-Medium",
          "corner_radius": 30,
          "padding": 60
        },
        {
          "type": "cta_button",
          "text": "${event_time}",
          "auto_width": true,
          "bg_color": "#ffffff",
          "text_color": "#0055fe",
          "font_size": 30,
          "font_path": "Montserrat-Medium",
          "corner_radius": 30,
          "padding": 60
        }
      ]
    },
    {
      "type": "text",
      "text": "${event_highlight}",
      "position": {
        "x": 150,
        "y": 250
      },
      "font_size": 50,
      "max_width": 780,
      "alignment": "center",
      "color": "#ffffff",
      "font_path": "Poppins-Regular"
    },
    {
      "type": "text",
      "text": "${register_details}",
      "position": {
        "x": 30,
        "y": 1040
      },
      "font_size": 24,
      "alignment": "left",
      "color": "#ffffff",
      "font_path": "Poppins-Light"
    },
    {
      "type": "image",
      "position": {
        "x": 150,
        "y": 490
      },
      "size": {
        "width": 780,
        "height": 500
      },
      "image_url": "${product_image}"
    }
  ],
  "validation": {
    "company_name": {
      "field": "company_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "event_type": {
      "field": "event_type",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "event_date": {
      "field": "event_date",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "event_time": {
      "field": "event_time",
      "type": "text",
      "minLength": 1,
      "maxLength": 22
    },
    "event_highlight": {
      "field": "event_highlight",
      "type": "text",
      "minLength": 1,
      "maxLength": 200
    },
    "register_details": {
      "field": "register_details",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "samples": {
      "company_name": "Dolze AI",
      "event_type": "FREE WEBINAR",
      "event_date": "July 16",
      "event_time": "10:00 AM - 12:00 PM",
      "event_highlight": "Learn AI innovations from industry experts",
      "register_details": "Registration Link in bio",
      "product_image": "https://example.com/webinar_image.png"
    },
    "fieldPrompt": {
      "company_name": "Enter your company or organization name (e.g., 'Tech Innovators Inc.'). This will be displayed at the top of the event announcement.",
      "event_type": "Enter the type of event (max 20 characters). Examples: 'FREE WEBINAR', 'LIVE WORKSHOP', 'CONFERENCE', 'NETWORKING EVENT'.",
      "event_date": "Enter the event date (max 20 characters). Format examples: 'July 16', 'Aug 5, 2023', 'Every Tuesday in June'.",
      "event_time": "Enter the event time (max 20 characters). Include timezone if relevant. Example: '2:00 PM EST', '10:00 AM - 12:00 PM'.",
      "event_highlight": "Enter the main event title or highlight (keep it concise). This will be the most prominent text on the announcement.",
      "register_details": "Enter registration instructions (e.g., 'Register at our website', 'Link in bio', 'Email to RSVP'). This will appear at the bottom of the post.",
      "product_image": "Create a high-quality product image with a clean, professional background that highlights the product's features. The image should be well-lit, with the product centered and shown from an appealing angle. Include any relevant props or context that showcase the product's use or benefits."
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/templatesevent_alert.png"
  }
}

{
  "name": "product_sale",
  "description": "Enhanced product advertisement template for Dr. Berg Probiotics with Prebiotic Blend",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/a6fc48a9-8d1a-4dcf-87bc-93a4269c002c.png",
      "tint_color": "#4A90E2",
      "tint_opacity": 0.15,
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      }
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 10,
        "y": 10
      },
      "size": {
        "width": 100,
        "height": 100
      },
      "circle_crop": true
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": {
        "x": 50,
        "y": 400
      },
      "size": {
        "width": 600,
        "height": 600
      },
      "circle_crop": false
    },
    {
      "type": "text",
      "text": "${product_name}",
      "position": {
        "x": 200,
        "y": 40
      },
      "font_size": 100,
      "color": [1, 1, 1, 1.0],
      "font_path": "Poppins-SemiBold",
      "alignment": "left",
      "max_width": 880,
      "line_spacing": 1.1
    },
    {
      "type": "text",
      "text": "${product_description}",
      "position": {
        "x": 200,
        "y": 280
      },
      "font_size": 64,
      "color": [30, 30, 21, 0.9],
      "font_path": "Montserrat-Light",
      "alignment": "left",
      "max_width": 800
    },
    {
      "type": "text",
      "text": "${sale_heading}",
      "position": {
        "x": 630,
        "y": 560
      },
      "font_size": 55,
      "color": "#111111",
      "font_path": "Poppins-SemiBold",
      "line_spacing": 1.3,
      "max_width": 450,
      "alignment": "center"
    },
    {
      "type": "text",
      "text": "${sale_text}",
      "position": {
        "x": 630,
        "y": 690
      },
      "font_size": 65,
      "color": "#4046ff",
      "font_path": "Montserrat-SemiBold",
      "line_spacing": 1.3,
      "max_width": 450,
      "alignment": "center"
    },
    {
      "type": "cta_button",
      "text": "${cta_text}",
      "position": {
        "x": 700,
        "y": 900
      },
      "size": {
        "width": 300,
        "height": 80
      },
      "auto_width": false,
      "bg_color": "#111111",
      "text_color": "#FFFFFF",
      "font_size": 36,
      "font_path": "Poppins-Bold",
      "corner_radius": 40
    },
    {
      "type": "text",
      "text": "${sale_end_text}",
      "position": {
        "x": 700,
        "y": 1000
      },
      "font_size": 28,
      "color": [255, 255, 255, 0.8],
      "font_path": "Outfit-Regular",
      "max_width": 300,
      "alignment": "center"
    }
  ],
  "validation": {
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 14
    },
    "sale_end_text": {
      "field": "sale_end_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "product_description": {
      "field": "product_description",
      "type": "text",
      "minLength": 20,
      "maxLength": 35
    },
    "sale_heading": {
      "field": "sale_heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 21
    },
    "sale_text": {
      "field": "sale_text",
      "type": "text",
      "minLength": 15,
      "maxLength": 28
    },
    "background_image_url": {
      "field": "background_image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "samples": {
      "cta_text": "Shop Now",
      "sale_end_text": "2025-08-31",
      "product_name": "Smart Gadget",
      "product_description": "Innovative tool for everyday solutions",
      "sale_heading": "50% OFF Sale",
      "sale_text": "Limited Time Offer",
      "theme_color": "#4A90E2",
      "product_image": "https://example.com/gadget.png",
      "logo_url": "https://example.com/logo.png"
    },
    "fieldPrompt": {
      "cta_text": "Enter a clear call-to-action (1-2 words). Example: 'Shop Now', 'Buy Now', 'Get Yours'.",
      "sale_end_text": "Enter the end date of your sale. Example: 'Sale ends January 31st', 'Limited time offer'.",
      "product_name": "Enter your product name (3-5 words). Keep it clear and descriptive. Example: 'Premium Wireless Earbuds'.",
      "product_description": "Write a short product description (10-15 words). Highlight key benefits. Example: 'Experience crystal clear sound with 24-hour battery life'.",
      "sale_heading": "Enter a sale headline (3-5 words). Example: 'Summer Sale', 'Limited Time Offer', 'Special Discount'.",
      "sale_text": "Enter sale details (5-10 words). Example: '50% OFF', 'Buy 1 Get 1 Free', 'Limited Stock'.",
      "theme_color": "Enter a hex color code (e.g., #4A90E2) that matches your brand or product. This will be used for accents and highlights.",
      "product_image": "generate a prompt for a high-quality product image. For best results, use an image with a transparent or solid background.",
      "logo_url": "generate a prompt for your company logo. For best results, use a high-resolution image with a transparent background."
    }
  }
}

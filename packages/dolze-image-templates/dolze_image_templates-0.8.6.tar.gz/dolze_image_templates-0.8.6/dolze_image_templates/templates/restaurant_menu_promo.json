{
  "name": "restaurant_menu_promo",
  "description": "Bright green healthy food promotion template with salad image and pricing.",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "use_base_image": false,
  "validation": {
    "product_name": {
      "field": "product_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 15
    },
    "product_description": {
      "field": "product_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "price": {
      "field": "price",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },

    "headline": {
      "field": "headline",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "subtitle": {
      "field": "subtitle",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "price_note": {
      "field": "price_note",
      "type": "text",
      "minLength": 1,
      "maxLength": 10
    },
    "footer_text_left": {
      "field": "footer_text_left",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "footer_text_right": {
      "field": "footer_text_right",
      "type": "text",
      "minLength": 1,
      "maxLength": 30
    },
    "logo_url": {
      "field": "logo_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "samples": {
      "product_image": "https://example.com/healthy_salad.jpg",
      "product_name": "DolzeAI",
      "product_description": "AI-powered image generation",
      "price": "â‚¹249",
      "theme_color": "#43A047",
      "headline": "Fresh",
      "subtitle": "Healthy Food",
      "price_note": "ONLY",
      "footer_text_left": "www.dolze.ai",
      "footer_text_right": "987 654 3210",
      "logo_url": "https://i.postimg.cc/R0t3BS5K/logo.png"
    },
    "fieldPrompt": {
      "product_name": "Name of the product or service",
      "product_description": "Description of the product or service",
      "price": "Price in INR",
      "theme_color": "Theme color in hex code (e.g., '#43A047')",
      "product_image": "Main product image URL",
      "headline": "Main headline text",
      "subtitle": "Subtitle or secondary headline",
      "price_note": "Note about the price (e.g., 'ONLY')",
      "footer_text_left": "Footer text for the left side",
      "footer_text_right": "Contact number or information",
      "logo_url": "Logo image URL"
    }
  },
  "components": [
    {
      "type": "image",
      "image_url": "https://i.postimg.cc/yxp9mh72/image-27.png",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "image_fit": "cover"
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": { "x": 220, "y": 105 },
      "size": { "width": 800, "height": 800 },
      "image_fit": "contain"
    },
    {
      "type": "image",
      "image_url": "https://i.postimg.cc/SN75LJ9V/Layer-1.png",
      "position": { "x": 160, "y": 310 },
      "size": { "width": 125, "height": 125 },
      "image_fit": "contain"
    },
    {
      "type": "text",
      "text": "Fresh & Tasty",
      "position": { "x": 120, "y": 50 },
      "font_size": 32,
      "color": "#FFFFFF",
      "font_path": "HappyMonkey-Regular",
      "alignment": "left",
      "rotate": 25
    },
    {
      "type": "text",
      "text": "${headline}",
      "position": { "x": 70, "y": 790 },
      "font_size": 64,
      "color": "#FFFFFF",
      "font_path": "GreatVibes-Regular",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${subtitle}",
      "position": { "x": 70, "y": 860 },
      "font_size": 72,
      "color": "#FFFFFF",
      "font_path": "Poppins-Bold",
      "alignment": "left"
    },
    {
      "type": "rectangle",
      "position": { "x": 830, "y": 800 },
      "size": { "width": 170, "height": 140 },
      "fill_color": "#FFFFFF",
      "border_radius": 60
    },
    {
      "type": "text",
      "text": "${price}",
      "position": { "x": 860, "y": 810 },
      "font_size": 64,
      "color": "#2F7C1A",
      "font_path": "Poppins-Bold",
      "alignment": "left"
    },
    {
      "type": "text",
      "text": "${price_note}",
      "position": { "x": 870, "y": 880 },
      "font_size": 28,
      "color": "#2F7C1A",
      "font_path": "Poppins-Medium",
      "alignment": "left"
    },
    {
      "type": "rectangle",
      "position": { "x": 0, "y": 1000 },
      "size": { "width": 1080, "height": 80 },
      "fill_color": "#FFFFFF",
      "border_radius": 0
    },
    {
      "type": "text",
      "text": "${footer_text_left}",
      "position": { "x": 70, "y": 1020 },
      "font_size": 28,
      "color": "#2F7C1A",
      "font_path": "Poppins-SemiBold",
      "alignment": "left"
    },

    {
      "type": "text",
      "text": "FOR FREE DELIVERY: ${footer_text_right}",
      "position": { "x": 600, "y": 1020 },
      "font_size": 24,
      "color": "#2F7C1A",
      "font_path": "Poppins-Medium",
      "alignment": "left"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": { "x": 70, "y": 70 },
      "size": { "width": 260, "height": 80 },
      "image_fit": "contain"
    }
  ]
}

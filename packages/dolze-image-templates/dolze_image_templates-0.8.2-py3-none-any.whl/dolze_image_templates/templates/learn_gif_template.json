{
  "name": "learn_gif_template",
  "description": "Animated education banner with changing text and background",
  "size": {
    "width": 768,
    "height": 1442
  },
  "use_base_image": false,
  "validation": {
    "heading": {
      "field": "heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "subheading": {
      "field": "subheading",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "background_color": {
      "field": "background_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "image_url": {
      "field": "image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "samples": {
      "heading": "Learn Something New",
      "subheading": "Expand your knowledge with our interactive courses",
      "background_color": "#6200EA",
      "image_url": "https://example.com/learning_illustration.png"
    },
    "fieldPrompt": {
      "heading": "A catchy educational heading",
      "subheading": "A brief description of the learning content",
      "background_color": "#6200EA",
      "image_url": "Generate a prompt for an educational illustration image"
    }
  },
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 768,
        "height": 1442
      },
      "fill_color": "${background_color}",
      "border_radius": 0
    },
    {
      "type": "image",
      "image_url": "https://i.postimg.cc/d3qQry0D/Frame-1244832596.png",
      "position": {
        "x": 80,
        "y": 80
      },
      "size": {
        "width": 200,
        "height": 80
      },
      "image_fit": "contain"
    },
    {
      "type": "text",
      "text": "${headline}",
      "position": {
        "x": 80,
        "y": 230
      },
      "font_size": 72,
      "color": "#202020",
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 620,
      "line_height": 1.2
    },
    {
      "type": "text",
      "text": "${feature1}",
      "position": {
        "x": 80,
        "y": 460
      },
      "font_size": 48,
      "color": "#202020",
      "font_path": "Poppins-Regular",
      "max_width": 620
    },
    {
      "type": "text",
      "text": "${feature2}",
      "position": {
        "x": 80,
        "y": 560
      },
      "font_size": 48,
      "color": "#202020",
      "font_path": "Poppins-Regular",
      "max_width": 620
    },
    {
      "type": "text",
      "text": "${feature3}",
      "position": {
        "x": 80,
        "y": 660
      },
      "font_size": 48,
      "color": "#202020",
      "font_path": "Poppins-Regular",
      "max_width": 620
    },
    {
      "type": "text",
      "text": "${feature4}",
      "position": {
        "x": 80,
        "y": 760
      },
      "font_size": 48,
      "color": "#202020",
      "font_path": "Poppins-Regular",
      "max_width": 620
    },
    {
      "type": "rectangle",
      "position": {
        "x": 160,
        "y": 1300
      },
      "size": {
        "width": 440,
        "height": 100
      },
      "fill_color": "${cta_color}",
      "border_radius": 50
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 160,
        "y": 1320
      },
      "font_size": 36,
      "color": "${cta_text_color}",
      "font_path": "Poppins-Medium",
      "alignment": "center",
      "max_width": 440
    }
  ]
}

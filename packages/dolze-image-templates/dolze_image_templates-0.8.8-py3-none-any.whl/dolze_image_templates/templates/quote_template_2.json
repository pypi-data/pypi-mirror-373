{
  "name": "quote_template_2",
  "description": "Enhanced quote template with glassmorphism card, gradient background, and modern typography",
  "size": {
    "width": 2560,
    "height": 2560
  },
  "use_base_image": false,
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2560,
        "height": 2560
      },
      "fill_color": null,
      "gradient": {
        "type": "linear",
        "colors": [
          "${theme_color}",
          "#E6F0FF"
        ],
        "direction": 135
      },
      "border_radius": 0,
      "background_effect": "bokeh"
    },
    {
      "type": "rectangle",
      "position": {
        "x": 280,
        "y": 360
      },
      "size": {
        "width": 2000,
        "height": 1600
      },
      "fill_color": [
        255,
        255,
        255,
        0.92
      ],
      "border_radius": 60,
      "blur_radius": 30,
      "border_width": 1,
      "border_color": [
        255,
        255,
        255,
        0.4
      ]
    },
    {
      "type": "rectangle",
      "position": {
        "x": 460,
        "y": 480
      },
      "size": {
        "width": 120,
        "height": 6
      },
      "fill_color": null,
      "gradient": {
        "type": "linear",
        "colors": [
          "${theme_color}",
          "#A1BFFA"
        ],
        "direction": 45
      },
      "border_radius": 3
    },
    {
      "type": "text",
      "text": "${quote1}",
      "position": {
        "x": 460,
        "y": 560
      },
      "font_path": "Outfit-Bold",
      "font_size": 108,
      "color": [
        17,
        24,
        39,
        1
      ],
      "max_width": 1640,
      "line_spacing": 1.4,
      "align": "center",
      "letter_spacing": -0.5
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 1980,
        "y": 180
      },
      "size": {
        "width": 200,
        "height": 200
      },
      "circle_crop": true,
      "border_width": 5,
      "border_color": [
        255,
        255,
        255,
        1
      ],
      "glow_color": [
        68,
        236,
        157,
        0.3
      ]
    },
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 2200
      },
      "size": {
        "width": 2560,
        "height": 360
      },
      "fill_color": [
        255,
        255,
        255,
        0.95
      ],
      "gradient": {
        "type": "linear",
        "colors": [
          [
            255,
            255,
            255,
            0.95
          ],
          [
            245,
            247,
            250,
            0.95
          ]
        ],
        "direction": 90
      },
      "border_radius": 0
    },
    {
      "type": "text",
      "text": "${username}",
      "position": {
        "x": 460,
        "y": 2260
      },
      "font_path": "Outfit-SemiBold",
      "font_size": 56,
      "color": [
        30,
        30,
        40,
        1
      ],
      "max_width": 1000,
      "line_spacing": 1.2,
      "align": "left"
    },
    {
      "type": "text",
      "text": "${website_url}",
      "position": {
        "x": 460,
        "y": 2340
      },
      "font_path": "Outfit-Medium",
      "font_size": 44,
      "color": [
        100,
        100,
        120,
        1
      ],
      "max_width": 1000,
      "line_spacing": 1.2,
      "align": "left",
      "underline": {
        "color": [
          100,
          100,
          120,
          0.5
        ],
        "thickness": 1
      }
    }
  ],
  "validation": {
    "quote1": {
      "field": "quote1",
      "type": "text",
      "minLength": 175,
      "maxLength": 280
    },
    "quote2": {
      "field": "quote2",
      "type": "text",
      "minLength": 1,
      "maxLength": 200
    },
    "username": {
      "field": "username",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "samples": {
      "quote1": "Our innovative solutions streamline your workflow, saving time and boosting productivity across industries with cutting-edge technology.",
      "quote2": "Empowering businesses to thrive.",
      "username": "@stevejobs"
    },
    "fieldPrompt": {
      "quote1": "genereate a phrase in about 35-40 words about this business/problem its solving or the industry it operates in",
      "username": "@stevejobs"
    }
  },
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/quote_template_2.png"
  }
}
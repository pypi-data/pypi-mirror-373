{
  "name": "product_poster",
  "description": "Promo template with blue background, bold headline, cookie image, and CTA button",
  "size": {
    "width": 1080,
    "height": 1080
  },
  "validation": {
    "background_image_url": {
      "field": "background_image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000,
      "isTransparentImage": true
    },
    "logo_url": {
      "field": "logo_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "headline": {
      "field": "headline",
      "type": "text",
      "minLength": 1,
      "maxLength": 35
    },
    "subtitle": {
      "field": "subtitle",
      "type": "text",
      "minLength": 1,
      "maxLength": 70
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "cta_text": {
      "field": "cta_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 20
    },
    "product_image": {
      "field": "product_image",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "samples": {
      "logo_url": "https://example.com/bakery_logo.png",
      "headline": "Fresh Baked Cookies",
      "subtitle": "Made with premium ingredients daily",
      "theme_color": "#FF9900",
      "cta_text": "Order Now",
      "product_image": "https://example.com/chocolate_chip_cookies.png"
    },
    "fieldPrompt": {
      "logo_url": "Logo of the business",
      "headline": "A catchy headline for the product promotion",
      "subtitle": "A brief description of the product",
      "theme_color": "a hex color code for the theme color(eg: #FF9900)",
      "cta_text": "Call to action text",
      "product_image": "Generate a prompt for an appetizing cookie image"
    }
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "https://i.postimg.cc/ht54k7XW/cookiebg.png",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 1080
      },
      "image_fit": "cover"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 400,
        "y": 40
      },
      "size": {
        "width": 250,
        "height": 75
      },
      "image_fit": "contain"
    },
    {
      "type": "text",
      "text": "${headline}",
      "position": {
        "x": 60,
        "y": 140
      },
      "font_size": 90,
      "color": "#ffffff",
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "max_width": 960
    },
    {
      "type": "text",
      "text": "${subtitle}",
      "position": {
        "x": 60,
        "y": 255
      },
      "font_size": 40,
      "color": "#ffffff",
      "font_path": "Poppins-Regular",
      "alignment": "center",
      "max_width": 960
    },
    {
      "type": "rectangle",
      "position": {
        "x": 390,
        "y": 340
      },
      "size": {
        "width": 300,
        "height": 70
      },
      "fill_color": "${theme_color}",
      "border_radius": 35
    },
    {
      "type": "text",
      "text": "${cta_text}",
      "position": {
        "x": 390,
        "y": 355
      },
      "font_size": 30,
      "color": "#ffffff",
      "font_path": "Poppins-Bold",
      "alignment": "center",
      "max_width": 300
    },
    {
      "type": "image",
      "image_url": "${product_image}",
      "position": {
        "x": 85,
        "y": 360
      },
      "size": {
        "width": 920,
        "height": 730
      },
      "image_fit": "contain"
    }
  ]
}

{
  "name": "summer_sale_promotion",
  "description": "Modern summer sale promotion with bold typography and clean layout",
  "size": {
    "width": 1080,
    "height": 810
  },
  "use_base_image": false,
  "components": [
    {
      "type": "image",
      "image_url": "${background_image_url}",
      "tint": {
        "type": "linear",
        "center": [0.5, 0.5],
        "colors": [
          [1, 1, 1, 1],
          [1, 1, 1, 0.9],
          [1, 1, 1, 0.8],
          [1, 1, 1, 0.8],
          [1, 1, 1, 0.4],
          [1, 1, 1, 0.2],
          [1, 1, 1, 0.0]
        ],
        "opacity": 0.9
      },
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 1080,
        "height": 810
      }
    },
    {
      "type": "cta_button",
      "text": "${brand_name}",
      "position": {
        "x": 81,
        "y": 24
      },
      "size": {
        "width": 378,
        "height": 54
      },
      "auto_width": false,
      "bg_color": "#ffffff",
      "text_color": "${theme_color}",
      "font_size": 30,
      "font_path": "Outfit-Bold",
      "corner_radius": 27
    },
    {
      "type": "text",
      "text": "${sale_heading}",
      "position": {
        "x": 81,
        "y": 132
      },
      "font_size": 92,
      "color": [255, 255, 255],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 486,
      "line_height": 1.1,
      "letter_spacing": -0.81
    },
    {
      "type": "text",
      "text": "${sale_description}",
      "position": {
        "x": 81,
        "y": 350
      },
      "font_size": 27,
      "color": [255, 255, 255, 1],
      "font_path": "Poppins-Medium",
      "alignment": "left",
      "max_width": 432,
      "line_height": 1.8,
      "letter_spacing": 0.76
    },
    {
      "type": "text",
      "text": "${discount_text}",
      "position": {
        "x": 81,
        "y": 588
      },
      "font_size": 54,
      "color": [255, 255, 255],
      "font_path": "Poppins-Bold",
      "alignment": "left",
      "max_width": 270,
      "line_height": 1.2,
      "letter_spacing": -0.54
    },
    {
      "type": "cta_button",
      "text": "${contact_number}",
      "position": {
        "x": 81,
        "y": 751
      },
      "size": {
        "width": 378,
        "height": 54
      },
      "auto_width": false,
      "bg_color": "#ffffff",
      "text_color": "${theme_color}",
      "font_size": 30,
      "font_path": "Outfit-Bold",
      "corner_radius": 27
    }
  ],
  "validation": {
    "background_image_url": {
      "field": "background_image_url",
      "type": "image",
      "minLength": 0,
      "maxLength": 1000
    },
    "brand_name": {
      "field": "brand_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "sale_heading": {
      "field": "sale_heading",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "sale_description": {
      "field": "sale_description",
      "type": "text",
      "minLength": 1,
      "maxLength": 56
    },
    "theme_color": {
      "field": "theme_color",
      "type": "text",
      "minLength": 4,
      "maxLength": 7
    },
    "discount_text": {
      "field": "discount_text",
      "type": "text",
      "minLength": 15,
      "maxLength": 28
    },
    "social_handle": {
      "field": "social_handle",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "contact_number": {
      "field": "contact_number",
      "type": "tel",
      "minLength": 10,
      "maxLength": 15
    },
    "samples": {
      "background_image_url": "https://example.com/summer_sale_bg.jpg",
      "brand_name": "Dolze AI",
      "sale_heading": "SUMMER SALE",
      "sale_description": "Huge discounts this summer",
      "theme_color": "#FF6B6B",
      "discount_text": "Up to 50% off",
      "social_handle": "@dolze_ai",
      "contact_number": "+12345678901"
    },
    "fieldPrompt": {
      "background_image_url": "Generate a prompt to generate an image for a vibrant summer-themed background related to the product",
      "brand_name": "YOUR BRAND name",
      "sale_heading": "SUMMER SALE or similar",
      "sale_description": "A biref intro to the sale in under 7-8 words",
      "theme_color": "a hex color code for the theme color(eg: #FF6B6B)",
      "discount_text": "upto 50% off or similar in under 3-4 words",
      "social_handle": "@dolze_ai",
      "contact_number": "random contact number"
    }
  },
  "config": {
    "isImageUploadPresent": true,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/summer_sale_promotion.png"
  }
}

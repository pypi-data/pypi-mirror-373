      "image_url": "${background_image_url}",
      "position": {
        "x": 50,
        "y": 20
      },
      "size": {
        "width": 1040,
        "height": 700
      }
    },
    {
      "type": "polygon",
      "position": {
        "x": 0,
        "y": 650
      },
      "fill_color": [
        255,
        255,
        255,
        0.99
      ],
      "points": [
        [
          0,

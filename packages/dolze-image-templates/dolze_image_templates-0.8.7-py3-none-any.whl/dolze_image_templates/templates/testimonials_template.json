{
  "name": "testimonials_template",
  "description": "Modern testimonial card with rating and user info",
  "size": {
    "width": 2048,
    "height": 2048
  },
  "use_base_image": true,
  "validation": {
    "user_name": {
      "field": "user_name",
      "type": "text",
      "minLength": 1,
      "maxLength": 50
    },
    "user_title": {
      "field": "user_title",
      "type": "text",
      "minLength": 1,
      "maxLength": 100
    },
    "testimonial_text": {
      "field": "testimonial_text",
      "type": "text",
      "minLength": 1,
      "maxLength": 189
    },
    "samples": {
      "user_name": "Sarah Johnson",
      "user_title": "Verified Buyer",
      "testimonial_text": "This product has transformed how we work daily."
    },
    "fieldPrompt": {
      "user_name": "Sarah Johnson",
      "user_title": "Verified Buyer",
      "testimonial_text": "This product has transformed how we work in under 27 words"
    }
  },
  "components": [
    {
      "type": "rectangle",
      "position": {
        "x": 0,
        "y": 0
      },
      "size": {
        "width": 2048,
        "height": 2048
      },
      "fill_color": "${theme_color}",
      "border_radius": 0
    },
    {
      "type": "rectangle",
      "position": {
        "x": 76,
        "y": 474
      },
      "size": {
        "width": 1896,
        "height": 664
      },
      "fill_color": "#f8f9fa",
      "border_radius": 38
    },
    {
      "type": "text",
      "position": {
        "x": 190,
        "y": 512
      },
      "text": "\"${testimonial_text}\"",
      "font_path": "Outfit-Regular",
      "font_size": 99,
      "color": "#333333",
      "max_width": 1707,
      "line_spacing": 1.4,
      "align": "left"
    },
    {
      "type": "polygon",
      "position": {
        "x": 0,
        "y": 0
      },
      "points": [
        [
          126,
          1130
        ],
        [
          246,
          1130
        ],
        [
          180,
          1280
        ]
      ],
      "fill_color": "#f8f9fa",
      "outline_color": "#333333",
      "outline_width": 0
    },
    {
      "type": "image",
      "image_url": "${user_avatar}",
      "position": {
        "x": 95,
        "y": 1327
      },
      "size": {
        "width": 190,
        "height": 190
      },
      "circle_crop": true
    },
    {
      "type": "text",
      "position": {
        "x": 303,
        "y": 1327
      },
      "text": "${user_name}",
      "font_path": "Outfit-SemiBold",
      "font_size": 61,
      "color": "#333333"
    },
    {
      "type": "text",
      "position": {
        "x": 303,
        "y": 1422
      },
      "text": "${user_title}",
      "font_path": "Outfit-Regular",
      "font_size": 53,
      "color": "#666666"
    },
    {
      "type": "text",
      "position": {
        "x": 95,
        "y": 1896
      },
      "text": "${website_url}",
      "font_path": "Outfit-Regular",
      "font_size": 64,
      "color": "#666666",
      "align": "left"
    },
    {
      "type": "image",
      "image_url": "${logo_url}",
      "position": {
        "x": 1801,
        "y": 1801
      },
      "size": {
        "width": 190,
        "height": 190
      },
      "opacity": 0.8,
      "circle_crop": true
    }
  ],
  "config": {
    "isImageUploadPresent": false,
    "sample_url": "https://dolze-templates-uat.s3.eu-north-1.amazonaws.com/uploads/testimonials_template.png"
  }
}
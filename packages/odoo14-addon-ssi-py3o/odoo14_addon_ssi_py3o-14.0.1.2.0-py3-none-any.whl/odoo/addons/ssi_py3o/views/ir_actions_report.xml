<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="py3o_report_view" model="ir.ui.view">
        <field name="name">ir.actions.report.parser.code</field>
        <field name="model">ir.actions.report</field>
        <field name="inherit_id" ref="report_py3o.py3o_report_view" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='py3o_template_fallback']" position="after">
                <field name="parser_state" />
                <field
                    name="parser_loc"
                    attrs="{'invisible': [('parser_state', '!=', 'loc')], 'readonly': [('parser_state', '=', 'loc')]}"
                />
                <field
                    name="parser_code"
                    widget="ace"
                    attrs="{'invisible': [('parser_state', '!=', 'code')], 'required': [('parser_state', '=', 'code')]}"
                />
            </xpath>
        </field>
    </record>
</odoo>

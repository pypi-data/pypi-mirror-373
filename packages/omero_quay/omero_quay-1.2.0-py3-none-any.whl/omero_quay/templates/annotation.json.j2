    {
      "@id": "{{ annotation.id }}",
      "name": "Additional properties",
      "importedFrom": "{{ annotation.namespace }}",
      {% if annotation.ann_type == "map_annotation" %}
      "@type": "additionalProperty",
      "additionalProperty" : [{% for pair in annotation.kv_pairs if pair.value %}{"@id": "{{ annotation.id }}_{{ pair.key }}"}{% if not loop.last %},{% endif %}{% endfor %}]
      {% elif annotation.ann_type == "comment_annotation" %}
      "@type": "Comment",
      "text": "{{ annotation.value  | replace('\n', ' ') }}"
      {% elif annotation.ann_type == "file_annotation" %}
      "@type": "File",
      "url": {{ annotation.urls }}
      {% endif %}
    },
    {% if annotation.ann_type == "map_annotation" %}
    {% for pair in annotation.kv_pairs if pair.value %}
    {
      "@id": "{{ annotation.id }}_pair.key",
      "@type": "PropertyValue",
      "name": "{{ pair.key}}",
      "value": "{{ pair.value  | replace('\n', ' ') }}"
    }{% if not loop.last %},
    {% endif %}
    {% endfor %}
    {% endif %}

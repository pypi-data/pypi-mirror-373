{
  "@context": "https://w3id.org/ro/crate/1.1/context",
  "@graph": [
    {
      "@id": "ro-crate-metadata.json",
      "name": "ro-crate-metadata.json",
      "conformsTo": {"@id": "https://w3id.org/ro/crate/1.1"},
      "about": {"@id": "./"},
      "description": "RO-Crate Metadata Descriptor (this file)",
      "@type": "CreativeWork"
    },
    {
      "@id": "https://creativecommons.org/licenses/by/4.0/",
      "identifier": "https://creativecommons.org/licenses/by/4.0/",
      "name": "Attribution 4.0 (CC BY 4.0)",
      "description": "This work is licensed under the Creative Commons Attribution 4.0 License. To view a copy of this license, visit http://creativecommons.org/licenses/by/4.0 or send a letter to Creative Commons, PO Box 1866, Mountain View, CA 94042, USA.",
      "@type": "CreativeWork"
    },
    {% set collection = investigation %}
    {% include "investigation.json.j2" %},
    {% if manifest.studies|length == 0 %}
      {
      "@id": "---no_study---" ,
      "@type": "None"
      }
    {% endif %}
    {% for collection in manifest.studies %}
      {% include "study.json.j2" %}
      {% if not loop.last %},
      {% endif %}
    {% endfor %},
    {% if manifest.assays|length == 0 %}
    {
    "@id": "---no_assay---",
    "@type": "None"
    }
    {% endif %}
    {% for collection in manifest.assays %}
      {% include "assay.json.j2" %}
      {% if not loop.last %},
      {% endif %}
    {% endfor %},
    {% if manifest.images|length == 0 %}
    {
    "@id": "---no_image---",
    "@type": "None"
    }
    {% endif %}
    {% for image in manifest.images if manifest.images|length != 0 %}
      {% include "image.json.j2"  %}
      {% if not loop.last %},
      {% endif %}
    {% endfor %},
    {% for annotation in manifest.quay_annotations if annotation.ann_type in ("comment_annotation", "map_annotation", "file_annotation") %}
      {% include "annotation.json.j2"  %}
      {% if not loop.last %},
      {% endif %}
    {%- endfor %}
  ]
}

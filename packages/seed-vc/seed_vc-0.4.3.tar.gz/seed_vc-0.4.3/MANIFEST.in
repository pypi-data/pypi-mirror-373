# Include top-level metadata
include pyproject.toml

# Include package documentation and licenses from src
recursive-include src/seed_vc src/audiocodec src/audiotools *.md *.MD *.yml *.yaml *.json LICENSE *.bin *.html

# Include config directories and example audio paths
recursive-include src/seed_vc/configs *
recursive-include src/seed_vc/examples *
recursive-include src/seed_vc/assets *

# Exclude common caches and build artifacts
exclude *.pyc
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store


{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Example",
            "type": "debugpy",
            "request": "launch",
            "program": "examples/example.py",
            "console": "integratedTerminal"
        },
        {
            "name": "cli [gamepad]",
            "type": "debugpy",
            "request": "launch",
            "module": "elrs.cli",
            "console": "integratedTerminal",
            "args": [
                "/dev/ttyUSB0",
                "921600"
            ]
        },
        {
            "name": "cli [argument]",
            "type": "debugpy",
            "request": "launch",
            "module": "elrs.cli",
            "console": "integratedTerminal",
            "args": [
                "/dev/ttyUSB0",
                "921600",
                "--ch", "1337"
            ]
        }
    ]
}
# Include static web assets
recursive-include reasoning_kernel/static *

# Include documentation
include README.md
include LICENSE
include CONTRIBUTING.md
include SECURITY.md

# Include configuration files
include pyproject.toml

# Include docs directory
recursive-include docs *

# Include examples
recursive-include examples *

# Exclude test files and development artifacts
exclude tests/*
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*
recursive-exclude * *.egg-info

# Exclude third party dependencies that shouldn't be packaged
exclude third_party/*

# Exclude development files
exclude .pre-commit-config.yaml
exclude static-analysis.datadog.yml
exclude uv.lock
exclude TODO

# mem8 Backend Configuration

# Server
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Security
SECRET_KEY=your-secret-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS
ALLOWED_ORIGINS=["http://localhost:20040", "http://127.0.0.1:20040", "http://localhost:3000"]
ALLOWED_HOSTS=["*"]

# Database (PostgreSQL)
DATABASE_URL=postgresql+asyncpg://mem8_user:mem8_password@localhost:5432/mem8

# Database (SQLite fallback for development)
# DATABASE_URL=sqlite+aiosqlite:///./mem8.db

# Redis
REDIS_URL=redis://localhost:6379

# GitHub OAuth
GITHUB_CLIENT_ID=your-github-client-id
GITHUB_CLIENT_SECRET=your-github-client-secret
GITHUB_REDIRECT_URI=http://localhost:20040/auth/callback

# Search
SEARCH_MODEL_NAME=all-MiniLM-L6-v2

# File upload
MAX_FILE_SIZE=10485760

# Logging
LOG_LEVEL=INFO
# Include the README and license files
include README.md
include LICENSE

# Include configuration files
include tagmanager/config.ini
include tagmanager/configReader.py

# Include all Python files
recursive-include tagmanager *.py

# Include package data
recursive-include tagmanager *.ini
recursive-include tagmanager *.json

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *~
global-exclude __pycache__
recursive-exclude * __pycache__
recursive-exclude * *.py[co]

# Exclude development files
exclude .gitignore
exclude .flake8
exclude .mypy.ini
exclude pytest.ini
exclude tox.ini

# Exclude test files from the package
prune tests
exclude tests.py

# Exclude virtual environment
prune venv

# Exclude build artifacts
prune build
prune dist
prune *.egg-info

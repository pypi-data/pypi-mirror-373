# 包含项目文档
include README.md
include CHANGELOG.md

# 包含配置文件
include requirements.txt
include pyproject.toml

# 包含数据文件
recursive-include rpa_sdk *.txt
recursive-include rpa_sdk *.json
recursive-include rpa_sdk *.yml
recursive-include rpa_sdk *.yaml
recursive-include rpa_sdk *.cfg
recursive-include rpa_sdk *.ini

# 排除不需要的文件
exclude .gitignore
exclude rpa_main.py
recursive-exclude script *
exclude .gitattributes
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * *.so
recursive-exclude * .DS_Store
recursive-exclude tests *
recursive-exclude docs *
recursive-exclude examples *

# 排除开发工具配置
exclude .flake8
exclude .mypy.ini
exclude pytest.ini
exclude tox.ini

# 排除IDE配置
recursive-exclude * .vscode
recursive-exclude * .idea
recursive-exclude * *.swp
recursive-exclude * *.swo
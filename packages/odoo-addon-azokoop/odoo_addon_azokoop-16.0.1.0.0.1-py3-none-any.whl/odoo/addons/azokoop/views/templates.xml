<?xml version="1.0" encoding="utf-8" ?>
<odoo>
<template id="cart_custom_div" inherit_id="website_sale.cart">
    <xpath expr="//div[contains(@class, 'oe_cart')]"
           position="before">
        <div id="custom-div-above-cart" class="alert alert-info" t-translation="on">
		<t t-value="_('Tarifa:')"/> <strong><span t-esc="website.pricelist_id.name"/></strong>
        </div>
    </xpath>
</template>
<template id="signup_form_with_recaptcha" name="Sign up Form with reCAPTCHA" inherit_id="auth_signup.signup">
   <xpath expr="//button[@type='submit']/.." position="before">
       <t t-call="website_recaptcha_v2.recaptcha_widget" />
   </xpath>
</template>
</odoo>

{
  "project": {
    "name": "research-project",
    "version": "1.0.0",
    "description": "Research LLM project for experimentation"
  },
  "model": {
    "architecture": "gpt",
    "vocab_size": 16000,
    "embedding_dim": 256,
    "num_layers": 4,
    "num_heads": 4,
    "hidden_dim": 1024,
    "max_seq_length": 128,
    "dropout": 0.1,
    "use_bias": true,
    "tie_weights": true
  },
  "training": {
    "batch_size": 2,
    "learning_rate": 0.0003,
    "weight_decay": 0.01,
    "num_epochs": 3,
    "warmup_steps": 500,
    "gradient_clip_norm": 1.0,
    "save_every": 250,
    "num_workers": 2,
    "pin_memory": true,
    "prefetch_factor": 2,
    "use_mixed_precision": false,
    "log_every": 10,
    "eval_every": 250
  },
  "data": {
    "input_formats": ["txt", "pdf", "docx", "html", "epub", "md"],
    "max_file_size_mb": 50,
    "preprocessing": {
      "max_samples": 500,
      "min_length": 10,
      "max_length": 5000,
      "remove_duplicates": true,
      "normalize_whitespace": true,
      "remove_empty_lines": true,
      "encoding": "utf-8"
    },
    "deduplication": {
      "enabled": true,
      "similarity_threshold": 0.85
    }
  },
  "paths": {
    "data_dir": "data",
    "raw_data_dir": "data/raw",
    "cleaned_data_dir": "data/cleaned",
    "deduped_data_dir": "data/deduped",
    "tokenized_data_dir": "data/tokens",
    "finetune_data_dir": "data/finetune",
    "tokenizer_dir": "exports/tokenizer",
    "checkpoint_dir": "exports/checkpoints",
    "gguf_dir": "exports/gguf",
    "log_dir": "logs",
    "export_dir": "exports"
  },
  "logging": {
    "level": "DEBUG",
    "format": "{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}",
    "rotation": "5 MB",
    "retention": "3 days",
    "compression": "gz",
    "colorize": true
  },
  "device": {
    "use_cuda": false,
    "cuda_device": 0,
    "use_mps": false,
    "cpu_threads": 4,
    "enable_mkldnn": true,
    "mixed_precision": false,
    "fallback_to_cpu": true,
    "auto_detect_device": true
  }
}
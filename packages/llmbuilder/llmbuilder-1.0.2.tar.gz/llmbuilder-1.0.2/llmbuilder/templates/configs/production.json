{
  "project": {
    "name": "production-project",
    "version": "1.0.0",
    "description": "Production LLM project for large-scale training"
  },
  "model": {
    "architecture": "gpt",
    "vocab_size": 32000,
    "embedding_dim": 768,
    "num_layers": 12,
    "num_heads": 12,
    "hidden_dim": 3072,
    "max_seq_length": 512,
    "dropout": 0.1,
    "use_bias": true,
    "tie_weights": true
  },
  "training": {
    "batch_size": 8,
    "learning_rate": 0.0001,
    "weight_decay": 0.01,
    "num_epochs": 10,
    "warmup_steps": 2000,
    "gradient_clip_norm": 1.0,
    "save_every": 1000,
    "num_workers": 8,
    "pin_memory": true,
    "prefetch_factor": 4,
    "use_mixed_precision": true,
    "log_every": 50,
    "eval_every": 1000
  },
  "data": {
    "input_formats": ["txt", "pdf", "docx", "html", "epub", "md"],
    "max_file_size_mb": 200,
    "preprocessing": {
      "max_samples": 10000,
      "min_length": 20,
      "max_length": 20000,
      "remove_duplicates": true,
      "normalize_whitespace": true,
      "remove_empty_lines": true,
      "encoding": "utf-8"
    },
    "deduplication": {
      "enabled": true,
      "similarity_threshold": 0.90
    }
  },
  "paths": {
    "data_dir": "data",
    "raw_data_dir": "data/raw",
    "cleaned_data_dir": "data/cleaned",
    "deduped_data_dir": "data/deduped",
    "tokenized_data_dir": "data/tokens",
    "finetune_data_dir": "data/finetune",
    "tokenizer_dir": "exports/tokenizer",
    "checkpoint_dir": "exports/checkpoints",
    "gguf_dir": "exports/gguf",
    "log_dir": "logs",
    "export_dir": "exports"
  },
  "logging": {
    "level": "INFO",
    "format": "{time:YYYY-MM-DD HH:mm:ss} | {level} | {name}:{function}:{line} - {message}",
    "rotation": "50 MB",
    "retention": "30 days",
    "compression": "gz",
    "colorize": false
  },
  "device": {
    "use_cuda": true,
    "cuda_device": 0,
    "use_mps": false,
    "cpu_threads": 16,
    "enable_mkldnn": true,
    "mixed_precision": true,
    "fallback_to_cpu": false,
    "auto_detect_device": true
  }
}
[Unit]
Description=OpenStack Octavia LoxiLB Controller Worker Service
After=syslog.target network.target

[Service]
Type=simple
User=octavia
ExecStart=/usr/local/bin/octavia-loxilb-controller-worker --config-file=/etc/octavia/octavia.conf
Restart=on-failure
RestartSec=5
TimeoutStopSec=15

[Install]
WantedBy=multi-user.target
/* Global layout - dark terminal theme */
Screen {
    background: #1a1a1a;
    color: #e0e0e0;
    layout: horizontal;
}

/* Left sidebar - run history with embedded title */
.run-history {
    width: 30%;
    min-width: 25;
    padding-right: 1;
}

.run-list {
    height: 1fr;
    margin-bottom: 1;
    border: solid #404040;
    background: #252525;
}

.run-item {
    padding: 0 1;
    background: transparent;
    color: #e0e0e0;
}

.run-item:hover {
    background: #333333;
}

.run-running {
    border-left: solid #ffaa00;
    color: #ffaa00;
}

.run-completed {
    border-left: solid #00ff88;
    color: #e0e0e0;
}

.run-failed {
    border-left: solid #ff4444;
    color: #ff4444;
}

.new-run-btn {
    width: 100%;
    margin-bottom: 1;
    background: #00d4ff;
    color: #000000;
    border: none;
    text-style: bold;
}

.new-run-btn:hover {
    background: #00a0cc;
}

/* Main content area */
.main-content {
    width: 70%;
    padding-left: 1;
}

/* New run panel with embedded titles */
.new-run-title {
    color: #00d4ff;
    text-style: bold;
    background: #252525;
    padding: 0 1;
    height: 1;
    border: solid #404040;
    margin-bottom: 0;
}

.new-run-panel {
    height: 100%;
    background: #252525;
    border: solid #404040;
}

.field-label {
    color: #00d4ff;
    text-style: bold;
    background: #252525;
}

.run-actions {
    height: 2;
    align: left middle;
}

.action-btn {
    margin-right: 2;
    min-width: 8;
    background: #00ff88;
    color: #000000;
    border: none;
    text-style: bold;
}

.action-btn:hover {
    background: #00cc66;
}

.cancel-btn {
    background: #404040;
    color: #e0e0e0;
}

.cancel-btn:hover {
    background: #555555;
}

/* Run details panel with embedded titles */
.details-content {
    height: 1fr;
}

.traces-section,
.logs-section {
    width: 50%;
    height: 100%;
}

.traces-section {
    width: 50%;
}

.logs-section {
    width: 50%;
}

.detail-log {
    height: 1fr;
    background: #252525;
    padding: 1;
    padding-top: 0;
}

/* Status indicators for buttons */
.status-running {
    background: #ffaa00;
    color: #000000;
    border: solid #ffaa00;
}

.status-success {
    background: #00ff88;
    color: #000000;
    border: solid #00ff88;
}

.status-error {
    background: #ff4444;
    color: #ffffff;
    border: solid #ff4444;
}

/* ListView styling */
ListView {
    background: transparent;
}

ListView>ListItem {
    background: transparent;
}

ListView>ListItem:hover {
    background: #333333;
}

ListView>ListItem.--highlight {
    background: #00d4ff;
    color: #000000;
}

/* TextArea and RichLog improvements */
TextArea {
    background: #1a1a1a;
    color: #e0e0e0;
}

RichLog {
    background: #252525;
    color: #e0e0e0;
}

/* Initially hide details panel */
.hidden {
    display: none;
}

/* Header and Footer */
Header {
    background: #000000;
    color: #00d4ff;
}

Footer {
    background: #000000;
    color: #888888;
    border-top: solid #404040;
}

/* Tabbed content styling */
TabbedContent {
    height: 100%;
}

TabPane {
    height: 100%;
    padding: 0;
}

/* Traces tab layout */
.traces-content {
    height: 100%;
}

.spans-tree-section {
    width: 40%;
    height: 100%;
    padding-right: 1;
}

.span-details-section {
    width: 60%;
    height: 100%;
    padding-left: 1;
}

/* Tree styling */
.spans-tree {
    height: 100%;
    background: #252525;
    padding: 1;
    padding-top: 0;
}

Tree {
    background: #252525;
    color: #e0e0e0;
}

Tree>TreeNode {
    background: transparent;
}

Tree>TreeNode:hover {
    background: #333333;
}

Tree>TreeNode.--highlight {
    background: #00d4ff;
    color: #000000;
}

/* Tab styling */
Tabs {
    background: #252525;
    color: #e0e0e0;
}

Tab {
    background: transparent;
    color: #888888;
    border: none;
}

Label {
    margin: 1 1;
    width: 100%;
    height: 100%;
    background: $panel;
    border: tall $primary;
    content-align: center middle;
}

/* Content areas */
ContentSwitcher {
    height: 1fr;
    background: transparent;
}

/* Span details styling */
SpanDetailsDisplay {
    height: 100%;
}

#span-details-display {
    height: 100%;
}

#span-details {
    height: 100%;
}

/* Panels */
.new-run-panel {
    height: 100%;
    background: #252525;
    padding: 1;
}

/* Section Titles */
.new-run-title {
    color: #00d4ff;
    text-style: bold;
    background: #1f1f1f;
    padding: 0 1;
    height: 2;
    content-align: left middle;
}

/* Labels */
.field-label {
    color: #00d4ff;
    text-style: bold;
    margin: 1 0;
}

.input-field {
    background: #1a1a1a;
    color: #e0e0e0;
}

.script-input {
    height: 3;
}

.json-input {
    margin-top: 1;
    height: 12;
}

.run-actions {
    height: auto;
    padding: 1;
}

.action-btn {
    min-width: 10;
    padding: 0 2;
    text-style: bold;
    border: none;
}

.action-btn:hover {
    background: #00cc66;
}

.cancel-btn {
    background: #404040;
    color: #e0e0e0;
}

.cancel-btn:hover {
    background: #555555;
}

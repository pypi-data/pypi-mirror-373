# 复制此文件为 .env 并修改相应配置

# NATS配置
NATS_URL=nats://localhost:4222
NATS_STREAM=events
NATS_SNAPSHOT_STREAM=snapshots

# 应用配置
APP_PORT=8080
GRPC_PORT=50051

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# 监控配置
PROMETHEUS_PORT=9090
GRAFANA_PORT=3000

# 数据库配置（可选）
DB_HOST=localhost
DB_PORT=5432
DB_NAME={{project_name}}
DB_USER=postgres
DB_PASSWORD=password

# Redis配置（可选）
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Badger配置（可选，轻量级文件缓存）
BADGER_PATH=./data/badger
BADGER_SYNC_WRITES=false
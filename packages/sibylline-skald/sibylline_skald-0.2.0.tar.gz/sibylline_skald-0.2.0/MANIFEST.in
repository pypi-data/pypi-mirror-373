# Include essential package metadata and documentation
include README.md
include LICENSE
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml

# Include the main package
recursive-include skald *.py
recursive-include skald *.pyi

# Include any data files needed by the package
# (none currently, but placeholder for future)
# recursive-include skald *.json
# recursive-include skald *.yaml
# recursive-include skald *.yml

# Exclude development and testing files
exclude TODO.md
exclude TESTING-KNOWN-ISSUES.md
exclude IMPLEMENTATION_SUMMARY.md
exclude SCHEMA_DOCUMENTATION.md
exclude demo.py
exclude debug_*.py
exclude conftest.py

# Exclude configuration files not needed for distribution
exclude .pre-commit-config.yaml
exclude .gitignore
exclude *.cue
exclude surface.json

# Exclude development directories
recursive-exclude tests *
recursive-exclude .github *
recursive-exclude .serena *
recursive-exclude scripts *

# Exclude Python cache and build artifacts
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude *.so
global-exclude .pytest_cache
global-exclude .coverage
global-exclude htmlcov

# Exclude editor and IDE files
global-exclude .vscode
global-exclude .idea
global-exclude *.swp
global-exclude *.swo
global-exclude *~

# Exclude OS-specific files
global-exclude .DS_Store
global-exclude Thumbs.db
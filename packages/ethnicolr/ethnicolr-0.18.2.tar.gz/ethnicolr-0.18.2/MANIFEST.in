# Include license and readme
include LICENSE
include README.md
include pyproject.toml

# Include documentation
recursive-include docs *.rst *.py Makefile make.bat

# Include examples and tests within package
recursive-include ethnicolr/examples *.ipynb
recursive-include ethnicolr/tests *.py

# Include data and model files
recursive-include ethnicolr/data *.csv *.md *.pdf *.R *.xlsx *.ipynb *.py
recursive-include ethnicolr/models *.h5 *.csv *.md *.ipynb

# Exclude bytecode and cache files
global-exclude *.py[cod]
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store

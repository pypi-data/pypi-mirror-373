{
  "database": {
    "type": "sqlite",
    "path": "familycli.db",
    "echo": false,
    "pool_size": 10,
    "max_overflow": 20,
    "pool_timeout": 30,
    "pool_recycle": 3600
  },
  "connection": {
    "check_same_thread": false,
    "timeout": 30
  },
  "migrations": {
    "enabled": true,
    "auto_upgrade": true
  }
}

{
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
        "source.organizeImports": "explicit"
    },
    "markdownlint.config": {
        "MD033": false,
        "MD041": false
    },
    "[markdown]": {
        "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    },
    "[python]": {
        "editor.defaultFormatter": "ms-python.black-formatter",
        "diffEditor.ignoreTrimWhitespace": false
    },
    "cSpell.words": [
        "alconna",
        "arclet",
        "asyncache",
        "bangumi",
        "bkey",
        "cqcode",
        "deepl",
        "demojize",
        "dhash",
        "emojize",
        "ezgif",
        "gifsicle",
        "hexie",
        "isort",
        "KHTML",
        "localstore",
        "metaevent",
        "nonebot",
        "onebot",
        "pikpak",
        "pixiv",
        "putpixel",
        "rsshub",
        "tinydb",
        "wkey"
    ]
}
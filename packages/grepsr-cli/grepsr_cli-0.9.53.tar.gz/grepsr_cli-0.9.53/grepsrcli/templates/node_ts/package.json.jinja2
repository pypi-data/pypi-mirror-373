{
    "name": "@{{plugin_dirname}}/{{plugin_name}}",
    "version": "0.0.0",
    {% if language_type == "typescript" -%}
        "main": "./lib/index.js",
    {%- else -%}
        "main": "./{{plugin_name}}.js",
    {%- endif %}
    "scripts": {
        {% if language_type == "typescript" -%}
            "start": "if [ \"$APP_ENV\" = \"tst\" ]; then tsc && export NODE_OPTIONS=--inspect ; fi && node {{ '--enable-source-maps' if enable_source_map else '' }} lib/index.js"
        {%- else -%}
            "start": "if [ \"$APP_ENV\" = \"tst\" ]; then export NODE_OPTIONS=--inspect ; fi && node {{plugin_name}}.js"
        {%- endif %}
    },
    "author": {
        "name": "{{git_name}}",
        "email": "{{git_email}}"
    },
    "license": "ISC",
    "description": "",
    "crawler_type": "{{ language_type }}"
}
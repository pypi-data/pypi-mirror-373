{
    "compilerOptions": {
        "target": "ES2022",
        "module": "CommonJS",
        "outDir": "./lib",
        "rootDir": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": false,
        "sourceMap": {{ 'true' if enable_source_map else 'false' }},
        "strict": true,
        "skipLibCheck": true,
        "declaration": true
    }

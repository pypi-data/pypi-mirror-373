<odoo>
    <record id="riba_payment_multiple_view_form" model="ir.ui.view">
        <field
            name="name"
        >Add async payment to form view for Pay multiple RiBa lines</field>
        <field name="model">riba.payment.multiple</field>
        <field
            name="inherit_id"
            ref="l10n_it_ricevute_bancarie.riba_payment_multiple_view_form"
        />
        <field name="arch" type="xml">
            <button name="pay" position="after">
                <button
                    name="pay_async"
                    string="Async Pay"
                    type="object"
                    class="btn btn-secondary"
                />
            </button>
        </field>
    </record>
</odoo>

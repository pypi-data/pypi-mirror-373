{
	"[python]": {
		"editor.formatOnSave": true,
		"editor.defaultFormatter": "charliermarsh.ruff",
		"editor.codeActionsOnSave": {
			"source.organizeImports": "always"
		}
	},
	"python.analysis.typeCheckingMode": "strict",
	"flake8.enabled": false,
	"ruff.enable": true,
	"ruff.lint.enable": true
}

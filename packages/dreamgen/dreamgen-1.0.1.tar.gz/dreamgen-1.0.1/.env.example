# Continuous Image Generation Configuration
# Copy this file to .env and modify the values as needed

# Model Configuration
OLLAMA_MODEL=llama3.2:3b
OLLAMA_TEMPERATURE=0.7
FLUX_MODEL=black-forest-labs/FLUX.1-schnell
MAX_SEQUENCE_LENGTH=512

# Image Generation Settings
IMAGE_HEIGHT=768
IMAGE_WIDTH=1360
NUM_INFERENCE_STEPS=4
GUIDANCE_SCALE=0.0
TRUE_CFG_SCALE=1.0

# Lora Configuration
LORA_DIR=C:/ComfyUI/ComfyUI/models/loras
ENABLED_LORAS=
LORA_APPLICATION_PROBABILITY=0.7

# Plugin Configuration
ENABLED_PLUGINS=time_of_day,nearest_holiday,holiday_fact,art_style,lora
PLUGIN_ORDER=time_of_day:1,nearest_holiday:2,holiday_fact:3,art_style:4,lora:5

# System Configuration
OUTPUT_DIR=output
LOG_DIR=logs
CACHE_DIR=.cache
CPU_ONLY=false
MPS_USE_FP16=false

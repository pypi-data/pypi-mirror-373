# Docker Environment Configuration
# Copy this file to .env and fill in your values

# ========================================
# BACKEND CONFIGURATION
# ========================================

# Model Configuration
# Set to false to use real Flux models (requires GPU and ~15GB RAM)
USE_MOCK_GENERATOR=true
MOCK_MODE=true

# Hugging Face Configuration
# Required for downloading Flux models (if not using mock mode)
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=

# Flux Model Selection
# Options: black-forest-labs/FLUX.1-schnell (Apache 2.0, commercial use allowed)
#          black-forest-labs/FLUX.1-dev (Non-commercial only)
FLUX_MODEL=black-forest-labs/FLUX.1-schnell

# Ollama Configuration
# If running Ollama locally, use host.docker.internal on Windows/Mac
# or the actual host IP on Linux
OLLAMA_HOST=http://host.docker.internal:11434
OLLAMA_MODEL=llama2

# ========================================
# FRONTEND CONFIGURATION
# ========================================

# Node environment
NODE_ENV=production

# API endpoint for frontend
# In Docker, this should reference the backend service name
NEXT_PUBLIC_API_URL=http://backend:8000

# ========================================
# DEVELOPMENT CONFIGURATION
# ========================================

# Logging
LOG_LEVEL=INFO

# Debug mode
DEBUG=false

# Hot reload (development only)
RELOAD=false

# ========================================
# GPU CONFIGURATION (Optional)
# ========================================

# CUDA settings (for NVIDIA GPUs)
# Uncomment and adjust if using GPU
# CUDA_VISIBLE_DEVICES=0
# PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512

# ========================================
# CSO MODULE CONFIGURATION
# ========================================

# These will be used when deploying as a CSO module
CSO_MODULE_NAME=continuous-image-gen
CSO_MODULE_VERSION=1.0.0
CSO_MODULE_TIER=custom

# GCP Configuration (for CSO deployment)
# GCP_PROJECT_ID=your-gcp-project-id
# GCP_REGION=us-central1
# GCS_BUCKET=your-image-bucket

# ========================================
# RESOURCE LIMITS
# ========================================

# Batch processing limits
MAX_BATCH_SIZE=20
DEFAULT_BATCH_SIZE=5
MAX_CONCURRENT=3

# Image generation settings
IMAGE_WIDTH=1024
IMAGE_HEIGHT=1024
GUIDANCE_SCALE=7.5
NUM_INFERENCE_STEPS=50